@model PhuKienCongNghe.Models.Sanpham
@{
    ViewData["Title"] = Model.TenSanPham;
}

<h1>@Model.TenSanPham</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <img src="@Model.HinhAnh" class="img-fluid" alt="@Model.TenSanPham" />
    </div>
    <div class="col-md-6">
        <h3>Giá: <span class="text-danger">@Model.Gia.ToString("N0") VNĐ</span></h3>
        <p>Kho: @Model.SoLuongTon</p>
        <p>Danh mục: @Model.MaDanhMucNavigation.TenDanhMuc</p>
        <hr />
        <p>@Model.MoTa</p>
        <hr />

        <form asp-controller="Cart" asp-action="AddToCart" method="post">
            <input type="hidden" name="productId" value="@Model.MaSanPham" />
            <div class="input-group mb-3" style="max-width: 200px;">
                <label class="input-group-text">Số lượng:</label>
                <input type="number" name="quantity" class="form-control" value="1" min="1" max="@Model.SoLuongTon">
            </div>
            <button type="submit" class="btn btn-success btn-lg">Thêm vào giỏ</button>
        </form>
    </div>
</div>