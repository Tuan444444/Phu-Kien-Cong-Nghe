@model PhuKienCongNghe.Models.Sanpham

@{
    ViewData["Title"] = Model.TenSanPham;
}

<style>
    :root {
        --shopee-orange: #ff6600;
        --shopee-orange-dark: #e65c00;
        --shopee-orange-light: #fff4eb;
    }

    /* Link cam Shopee */
    .link-brand {
        color: var(--shopee-orange);
        font-weight: 600;
        transition: 0.2s;
    }

        .link-brand:hover {
            color: var(--shopee-orange-dark);
            text-decoration: underline;
        }

    /* Nút cam */
    .btn-brand {
        background-color: var(--shopee-orange) !important;
        border-color: var(--shopee-orange);
        color: white !important;
        font-weight: 600;
        border-radius: 8px;
        transition: 0.2s;
    }

        .btn-brand:hover {
            background-color: var(--shopee-orange-dark) !important;
            border-color: var(--shopee-orange-dark);
        }

    /* Card SP liên quan */
    .product-card {
        border-radius: 12px;
        border: 1px solid #ffe6d5;
        transition: 0.3s;
    }

        .product-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.08);
            border-color: var(--shopee-orange);
        }

        .product-card a:hover {
            color: var(--shopee-orange) !important;
        }
</style>


<div class="container my-5">
    <div class="row">

        <div class="col-lg-6">
            <img src="@(string.IsNullOrEmpty(Model.HinhAnh) ? "https://via.placeholder.com/500" : Model.HinhAnh)"
                 class="img-fluid rounded shadow-sm" alt="@Model.TenSanPham">
        </div>

        <div class="col-lg-6">
            <h1 class="display-5 fw-bold">@Model.TenSanPham</h1>

            <p class="lead text-muted">
                Danh mục:
                <a asp-controller="Product" asp-action="Category" asp-route-id="@Model.MaDanhMuc"
                   class="link-brand">
                    @Model.MaDanhMucNavigation.TenDanhMuc
                </a>
            </p>

            <h2 class="text-danger fw-bold my-3">@Model.Gia.ToString("N0") đ</h2>

            <p class="text-muted">
                (Còn <strong class="text-dark">@Model.SoLuongTon</strong> sản phẩm)
            </p>

            <hr>

            <form asp-controller="Cart" asp-action="AddToCart" method="post">
                <input type="hidden" name="id" value="@Model.MaSanPham" />

                <div class="row">
                    <div class="col-md-5">
                        <label for="soLuong" class="form-label">Số lượng:</label>
                        <div class="input-group">
                            <input type="number" name="soLuong" id="soLuong"
                                   class="form-control text-center"
                                   value="1"
                                   min="1"
                                   max="@Model.SoLuongTon">
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2 mt-4">
                    <button type="submit" class="btn btn-brand btn-lg">
                        <i class="bi bi-cart-plus-fill"></i>
                        Thêm vào giỏ
                    </button>
                </div>
            </form>

        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12">
            <h3 class="fw-bold">Mô tả sản phẩm</h3>
            <div class="p-3 bg-light rounded border">
                @Html.Raw(Model.MoTa)
            </div>
        </div>
    </div>

    @{
        var relatedProducts = ViewData["RelatedProducts"] as List<PhuKienCongNghe.Models.Sanpham>;
    }

    @if (relatedProducts != null && relatedProducts.Any())
    {
        <div class="row mt-5">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-3">

                    <h3 class="fw-bold">Sản phẩm liên quan</h3>

                    <a asp-controller="Product"
                       asp-action="Category"
                       asp-route-id="@Model.MaDanhMuc"
                       class="link-brand">
                        Xem thêm
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="row">
            @foreach (var item in relatedProducts)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card h-100 product-card">
                        <a asp-action="Details" asp-controller="Product" asp-route-id="@item.MaSanPham">
                            <img src="@(string.IsNullOrEmpty(item.HinhAnh) ? "https://via.placeholder.com/300x300.png?text=No+Image" : item.HinhAnh)"
                                 class="card-img-top p-3" alt="@item.TenSanPham">
                        </a>

                        <div class="card-body p-3 d-flex flex-column">
                            <h5 class="card-title">
                                <a asp-action="Details"
                                   asp-controller="Product"
                                   asp-route-id="@item.MaSanPham"
                                   class="text-decoration-none text-dark">
                                    @item.TenSanPham
                                </a>
                            </h5>

                            <div class="product-price mb-2 mt-auto">
                                <span class="fw-bold text-danger fs-5">@item.Gia.ToString("N0") đ</span>
                            </div>

                            <div class="mt-2">
                                <a class="btn btn-sm btn-brand"
                                   asp-controller="Product"
                                   asp-action="Details"
                                   asp-route-id="@item.MaSanPham">Xem chi tiết</a>

                                <a class="btn btn-sm btn-outline-secondary"
                                   asp-controller="Cart"
                                   asp-action="AddToCart"
                                   asp-route-id="@item.MaSanPham">Thêm vào giỏ</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    }
