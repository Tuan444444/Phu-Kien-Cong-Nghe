@model X.PagedList.IPagedList<PhuKienCongNghe.Models.Sanpham>
@using X.PagedList
@using X.PagedList.Mvc.Core

@{
    // Title sẽ là Tên Danh mục được truyền từ Controller
    ViewData["Title"] = ViewData["Title"] ?? "Danh mục sản phẩm";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2 class="section-title text-center mb-4">@ViewData["Title"]</h2>

    @if (Model == null || !Model.Any())
    {
        <p class="text-center">Không tìm thấy sản phẩm nào trong danh mục này.</p>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                // Sử dụng partial view nếu bạn đã có, hoặc tạo thẻ div/card như sau:
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card h-100 product-card">
                        <a asp-action="Details" asp-controller="Product" asp-route-id="@item.MaSanPham">
                            <img src="@(string.IsNullOrEmpty(item.HinhAnh) ? "/images/placeholder.png" : item.HinhAnh)"
                                 class="card-img-top p-3" alt="@item.TenSanPham">
                        </a>
                        <div class="card-body p-3 d-flex flex-column">
                            <h5 class="card-title">@item.TenSanPham</h5>
                            <div class="product-price mb-2 mt-auto">
                                <span class="fw-bold text-danger fs-5">@item.Gia.ToString("N0") đ</span>
                            </div>
                            <div class="mt-2">
                                <a class="btn btn-sm btn-brand" asp-controller="Product" asp-action="Details" asp-route-id="@item.MaSanPham">Xem chi tiết</a>
                                <a class="btn btn-sm btn-outline-secondary" asp-controller="Cart" asp-action="AddToCart" asp-route-id="@item.MaSanPham">Thêm vào giỏ</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="row">
            <div class="col-12 d-flex justify-content-center mt-5">

                @Html.PagedListPager(
                         Model,
                         page => Url.Action(
                         "Category", // <-- PHẢI DÙNG TÊN ACTION LÀ "Category"
                         new
                         {
                             page = page,
                             id = ViewData["CategoryId"] // <-- PHẢI DÙNG LẠI CategoryId
                         }
                         ),
                         new X.PagedList.Mvc.Core.PagedListRenderOptions
            {
                UlElementClasses = new[] { "pagination" },
                LiElementClasses = new[] { "page-item" },
                PageClasses = new[] { "page-link" },
                ActiveLiElementClass = "active",
                DisplayLinkToNextPage = PagedListDisplayMode.Always,
                DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                LinkToNextPageFormat = "Sau",
                LinkToPreviousPageFormat = "Trước"
            }
                         )
            </div>
        </div>
    }
</div>