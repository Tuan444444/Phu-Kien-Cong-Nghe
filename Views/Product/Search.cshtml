@model IPagedList<PhuKienCongNghe.Models.Sanpham>
@using X.PagedList
@using X.PagedList.Mvc.Core

@{
    ViewData["Title"] = ViewData["Title"] ?? "Kết quả tìm kiếm";
    Layout = "_Layout"; // Giả định Layout của bạn
}

<div class="container my-5">

    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    @if (!Model.Any())
    {
        <div class="text-center p-5">
            <p class="fs-4 text-muted">Không tìm thấy sản phẩm nào khớp với từ khóa "@ViewData["Query"]".</p>
            <a asp-controller="Product" asp-action="Index" class="btn btn-brand">Quay về trang sản phẩm</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card h-100 product-card">

                        <a asp-action="Details" asp-controller="Product" asp-route-id="@item.MaSanPham">
                            <img src="@(string.IsNullOrEmpty(item.HinhAnh) ? "https://via.placeholder.com/300x300.png?text=No+Image" : item.HinhAnh)"
                                 class="card-img-top p-3" alt="@item.TenSanPham">
                        </a>

                        <div class="card-body p-3 d-flex flex-column">
                            <h5 class="card-title">
                                <a asp-action="Details" asp-controller="Product" asp-route-id="@item.MaSanPham" class="text-decoration-none text-dark">
                                    @item.TenSanPham
                                </a>
                            </h5>

                            <div class="product-price mb-2 mt-auto">
                                <span class="fw-bold text-danger fs-5">@item.Gia.ToString("N0") đ</span>
                            </div>

                            <div class="mt-2">
                                <a class="btn btn-sm btn-brand"
                                   asp-controller="Product"
                                   asp-action="Details"
                                   asp-route-id="@item.MaSanPham">Xem chi tiết</a>

                                <a class="btn btn-sm btn-outline-secondary"
                                   asp-controller="Cart"
                                   asp-action="AddToCart"
                                   asp-route-id="@item.MaSanPham">Thêm vào giỏ</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div> 
        
        <div class="row">
            <div class="col-12 d-flex justify-content-center">
                
                @Html.PagedListPager(Model, page => Url.Action(
                    ViewContext.RouteData.Values["action"].ToString(), 
                    new { 
                        page = page, 
                        query = ViewData["Query"] // Chỉ cần "query"
                    }),
                    
                    new PagedListRenderOptions
                    {
                        UlElementClasses = new[] { "pagination" }, 
                        LiElementClasses = new[] { "page-item" },
                        PageClasses = new[] { "page-link" }, // Thêm
                        ActiveLiElementClass = "active", 
                        DisplayLinkToNextPage = PagedListDisplayMode.Always, // Thêm
                        DisplayLinkToPreviousPage = PagedListDisplayMode.Always, // Thêm
                        LinkToNextPageFormat = "Sau", // Sửa
                        LinkToPreviousPageFormat = "Trước" // Sửa
                    }
                )

            </div>
        </div>
    } 
</div>