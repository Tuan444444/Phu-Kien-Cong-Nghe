@model IPagedList<PhuKienCongNghe.Models.Sanpham>
@using X.PagedList
@using X.PagedList.Mvc.Core

@{
    ViewData["Title"] = ViewData["Title"] ?? "Kết quả tìm kiếm";
    Layout = "_Layout";
}

<style>
    :root {
        --shopee-orange: #ff6600;
        --shopee-orange-dark: #e65c00;
        --shopee-orange-light: #fff4eb;
    }

    /* Card sản phẩm */
    .product-card {
        border-radius: 12px;
        border: 1px solid #ffe6d5;
        transition: 0.3s;
    }

        .product-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.08);
            border-color: var(--shopee-orange);
        }

        /* Link hover cam */
        .product-card a:hover {
            color: var(--shopee-orange) !important;
        }

    /* Button cam Shopee */
    .btn-brand {
        background-color: var(--shopee-orange) !important;
        border-color: var(--shopee-orange);
        color: white !important;
        font-weight: 600;
        border-radius: 8px;
        transition: 0.2s;
    }

        .btn-brand:hover {
            background-color: var(--shopee-orange-dark) !important;
            border-color: var(--shopee-orange-dark);
            color: #fff !important;
        }

    /* Giá */
    .price-orange {
        color: var(--shopee-orange) !important;
    }

    /* Phân trang cam */
    .pagination .page-item.active .page-link {
        background-color: var(--shopee-orange);
        border-color: var(--shopee-orange);
    }

    .pagination .page-link {
        color: var(--shopee-orange);
    }

        .pagination .page-link:hover {
            background-color: var(--shopee-orange-light);
            color: var(--shopee-orange-dark);
        }
</style>


<div class="container my-5">

    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    @if (!Model.Any())
    {
        <div class="text-center p-5">
            <p class="fs-4 text-muted">
                Không tìm thấy sản phẩm nào khớp với từ khóa "<strong class="price-orange">@ViewData["Query"]</strong>".
            </p>
            <a asp-controller="Product" asp-action="Index" class="btn btn-brand">
                Quay về trang sản phẩm
            </a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card h-100 product-card">

                        <a asp-action="Details"
                           asp-controller="Product"
                           asp-route-id="@item.MaSanPham">

                            <img src="@(string.IsNullOrEmpty(item.HinhAnh)
                                ? "https://via.placeholder.com/300x300.png?text=No+Image"
                                : item.HinhAnh)"
                                 class="card-img-top p-3" alt="@item.TenSanPham">
                        </a>

                        <div class="card-body p-3 d-flex flex-column">
                            <h5 class="card-title">
                                <a asp-action="Details"
                                   asp-controller="Product"
                                   asp-route-id="@item.MaSanPham"
                                   class="text-decoration-none text-dark">
                                    @item.TenSanPham
                                </a>
                            </h5>

                            <div class="product-price mb-2 mt-auto">
                                <span class="fw-bold fs-5 price-orange">
                                    @item.Gia.ToString("N0") đ
                                </span>
                            </div>

                            <div class="mt-2">
                                <a class="btn btn-sm btn-brand"
                                   asp-controller="Product"
                                   asp-action="Details"
                                   asp-route-id="@item.MaSanPham">
                                    Xem chi tiết
                                </a>

                                <a class="btn btn-sm btn-outline-secondary"
                                   asp-controller="Cart"
                                   asp-action="AddToCart"
                                   asp-route-id="@item.MaSanPham">
                                    Thêm vào giỏ
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="row">
            <div class="col-12 d-flex justify-content-center">

                @Html.PagedListPager(
                         Model,
                         page => Url.Action(
                         ViewContext.RouteData.Values["action"].ToString(),
                         new { page = page, query = ViewData["Query"] }
                         ),

                         new PagedListRenderOptions
            {
                UlElementClasses = new[] { "pagination" },
                LiElementClasses = new[] { "page-item" },
                PageClasses = new[] { "page-link" },
                ActiveLiElementClass = "active",
                DisplayLinkToNextPage = PagedListDisplayMode.Always,
                DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                LinkToNextPageFormat = "Sau",
                LinkToPreviousPageFormat = "Trước"
            }
                         )

            </div>
        </div>
    }
</div>
