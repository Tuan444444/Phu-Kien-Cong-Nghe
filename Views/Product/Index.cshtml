@model PhuKienCongNghe.ViewModels.ShopViewModel

@using X.PagedList
@using X.PagedList.Mvc.Core

@{
    ViewData["Title"] = ViewData["Title"] ?? "Cửa hàng";
    Layout = "_Layout";

    var currentAction = ViewData["CurrentAction"]?.ToString();
    var isHomePage = currentAction == "Index";
}
<div class="hero-section">
    <div class="hero-slide active" style="background-image: url('https://cf.shopee.vn/file/vn-11134258-820l4-mfxo13pqr09af9');"><div class="hero-overlay"></div></div>
    <div class="hero-slide" style="background-image: url('https://cf.shopee.vn/file/vn-50009109-727a24a85a60935da5ccb9008298f681');"><div class="hero-overlay"></div></div>
    <div class="hero-slide" style="background-image: url('https://cf.shopee.vn/file/vn-11134258-820l4-mfxo3ih8jzt51a');"><div class="hero-overlay"></div></div>
    <button class="hero-btn prev"><i class="fas fa-chevron-left"></i></button>
    <button class="hero-btn next"><i class="fas fa-chevron-right"></i></button>
</div>
<!-- ==================== SẢN PHẨM NỔI BẬT ==================== -->
@if (isHomePage && Model.FeaturedProducts != null && Model.FeaturedProducts.Any())
{
    <section class="featured-products py-5 bg-light">
        <div class="container">
            <h2 class="text-center fw-bold mb-4 section-title">✨ Sản phẩm nổi bật</h2>

            <div class="row g-4">
                @foreach (var featuredEntry in Model.FeaturedProducts)
                {
                    <partial name="_FeaturedProductCard" model="featuredEntry" />
                }
            </div>
        </div>
    </section>

    <hr class="my-5" />
}
@* === KHỐI TOP BÁN CHẠY (GIAO DIỆN FIRE & BIGGER CARDS) === *@
@if (isHomePage && Model.BestSellers != null && Model.BestSellers.Count > 0)
{
    var top1Product = Model.BestSellers.FirstOrDefault();
    var otherTopProducts = Model.BestSellers.Skip(1).Take(6).ToList(); // Lấy chính xác 6 sp tiếp theo

    <section class="section-fire-sale py-5">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="fire-title fw-bolder text-uppercase d-inline-block">
                    <i class="fa-solid fa-fire-flame-curved me-2"></i>Bảng Xếp Hạng Sôi Động
                </h2>
                <div class="fire-line mt-2"></div>
            </div>

            <div class="row g-3">
                @if (top1Product != null)
                {
                    <div class="col-xl-4 col-lg-5 col-md-12">
                        <div class="card h-100 border-0 fire-card top-1-king position-relative overflow-hidden">
                            <div class="crown-icon"><i class="fa-solid fa-crown"></i></div>

                            <div class="rank-badge rank-1 shadow">TOP 1</div>

                            <div class="card-body d-flex flex-column align-items-center text-center p-4 z-2 position-relative">
                                <a asp-controller="Product" asp-action="Details" asp-route-id="@top1Product.MaSanPham" class="d-block mb-4 w-100">
                                    <img src="@(string.IsNullOrEmpty(top1Product.HinhAnh) ? "/images/placeholder.png" : top1Product.HinhAnh)"
                                         class="img-fluid top-img-big" alt="@top1Product.TenSanPham">
                                </a>

                                <h3 class="card-title fw-bold mb-2 text-uppercase">
                                    <a asp-controller="Product" asp-action="Details" asp-route-id="@top1Product.MaSanPham" class="text-decoration-none text-dark stretched-link">
                                        @top1Product.TenSanPham
                                    </a>
                                </h3>

                                <div class="price-box mb-4">
                                    <span class="text-fire fw-bolder display-6">@top1Product.Gia.ToString("N0") ₫</span>
                                    <div class="badge bg-danger bg-gradient rounded-pill px-3 mt-2">Bán chạy nhất</div>
                                </div>

                                <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@top1Product.MaSanPham"
                                   class="btn btn-fire-gradient btn-lg rounded-pill w-75 fw-bold shadow position-relative z-3">
                                    MUA NGAY
                                </a>
                            </div>

                            <div class="fire-glow-bg"></div>
                        </div>
                    </div>
                }

                <div class="col-xl-8 col-lg-7 col-md-12">
                    <div class="row row-cols-2 row-cols-sm-3 g-3 h-100">
                        @for (int i = 0; i < otherTopProducts.Count; i++)
                        {
                            var item = otherTopProducts[i];
                            var rank = i + 2;
                            var rankClass = rank == 2 ? "rank-2" : (rank == 3 ? "rank-3" : "rank-normal");

                            <div class="col">
                                <div class="card h-100 border-0 fire-card small-card position-relative overflow-hidden">
                                    <div class="rank-badge @rankClass shadow-sm">TOP @rank</div>

                                    <a asp-controller="Product" asp-action="Details" asp-route-id="@item.MaSanPham" class="text-center p-3 bg-white rounded-top h-100 d-flex align-items-center justify-content-center">
                                        <img src="@(string.IsNullOrEmpty(item.HinhAnh) ? "/images/placeholder.png" : item.HinhAnh)"
                                             class="img-fluid small-top-img" alt="@item.TenSanPham">
                                    </a>

                                    <div class="card-body p-2 text-center d-flex flex-column justify-content-end">
                                        <h6 class="card-title text-truncate mb-1 fw-bold">
                                            <a asp-controller="Product" asp-action="Details" asp-route-id="@item.MaSanPham" class="text-decoration-none text-dark stretched-link">
                                                @item.TenSanPham
                                            </a>
                                        </h6>
                                        <span class="text-danger fw-bold">@item.Gia.ToString("N0") ₫</span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <hr class="my-5" />
}

<!-- ==================== DANH SÁCH SẢN PHẨM ==================== -->
<div class="container my-5">

    <h2 class="text-center fw-bold mb-4">@ViewData["Title"]</h2>

    @if (!Model.AllProducts.Any())
    {
        <div class="text-center p-5 bg-light rounded-4 shadow-sm">
            <p class="fs-4 text-muted">Không tìm thấy sản phẩm nào phù hợp.</p>
            <a asp-action="Index" class="btn btn-primary px-4 py-2 mt-3 rounded-pill">Xem tất cả sản phẩm</a>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model.AllProducts)
            {
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="card product-card shadow-sm border-0 rounded-4 h-100">

                        <a asp-action="Details" asp-controller="Product" asp-route-id="@item.MaSanPham"
                           class="d-block text-center p-3">
                            <img src="@(string.IsNullOrEmpty(item.HinhAnh) ? "/images/placeholder.png" : item.HinhAnh)"
                                 class="product-img rounded-3"
                                 alt="@item.TenSanPham">
                        </a>

                        <div class="card-body d-flex flex-column">

                            <h5 class="card-title fw-bold mb-2" style="height: 42px; overflow: hidden;">
                                <a asp-action="Details" asp-controller="Product" asp-route-id="@item.MaSanPham"
                                   class="text-decoration-none text-dark">
                                    @item.TenSanPham
                                </a>
                            </h5>

                            <div class="product-price text-danger fw-bold fs-5 mb-3">
                                @item.Gia.ToString("N0") ₫
                            </div>

                            <div class="mt-auto d-flex gap-2">
                                <a class="btn btn-outline-secondary flex-grow-1 rounded-pill"
                                   asp-action="Details" asp-route-id="@item.MaSanPham">Chi tiết</a>

                                <a class="btn btn-primary flex-grow-1 rounded-pill"
                                   asp-controller="Cart" asp-action="AddToCart" asp-route-id="@item.MaSanPham">
                                    <i class="bi bi-cart-plus"></i> Thêm vào giỏ
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- ==================== PHÂN TRANG ==================== -->
        <div class="row mt-4">
            <div class="col-12 d-flex justify-content-center">
                @Html.PagedListPager(Model.AllProducts, page => Url.Action(
                         ViewData["CurrentAction"]?.ToString() ?? "Index",
                         new
                         {
                             page = page,
                             id = ViewData["CategoryId"],
                             query = ViewData["Query"]
                         }),
                         new PagedListRenderOptions
            {
                UlElementClasses = new[] { "pagination" },
                LiElementClasses = new[] { "page-item" },
                PageClasses = new[] { "page-link" },
                ActiveLiElementClass = "active",
                DisplayLinkToNextPage = PagedListDisplayMode.Always,
                DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                LinkToNextPageFormat = "Sau",
                LinkToPreviousPageFormat = "Trước"
            }
                         )
            </div>
        </div>
    }
</div>

@section Styles {
    <style>
        .pb-3{
            background-color: white !important;
        }
        .hero-section {
            position: relative;
            height: 420px;
            border-radius: 16px;
            overflow: hidden;
            margin-bottom: 2rem;
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        }

        .hero-slide {
            position: absolute;
            inset: 0;
            background-size: cover;
            background-position: center;
            opacity: 0;
            transition: opacity 1s ease-in-out;
        }

            .hero-slide.active {
                opacity: 1;
            }

        .hero-overlay {
            position: absolute;
            inset: 0;
            background: rgba(0,0,0,0);
        }

        .hero-btn {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background-color: rgba(228,74,10,0.8);
            color: #fff;
            border: none;
            border-radius: 50%;
            width: 45px;
            height: 45px;
            font-size: 1.2rem;
            cursor: button;
            z-index: 10;
            transition: 0.3s;
        }

            .hero-btn:hover {
                background-color: #FF7A3D;
                transform: scale(1.1) translateY(-50%);
            }

            .hero-btn.prev {
                left: 20px;
            }

            .hero-btn.next {
                right: 20px;
            }
        /* ===== Tổng thể ===== */
        .section-title {
            letter-spacing: 1px;
        }

        /* ===== Card sản phẩm ===== */
        .product-card {
            transition: .25s;
            border-radius: 15px;
        }

            .product-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 8px 20px rgba(0,0,0,0.12) !important;
            }

        .product-img {
            width: 100%;
            height: 200px;
            object-fit: contain;
            background: #fff;
        }

        .btn-outline-secondary {
            color: #f57224 !important;
            border-color: #f57224 !important;
        }

        .btn-outline-secondary:hover {
            color: #f57224 !important;
            border-color: #f57224 !important;
            
        }
        /* ===== Phân trang ===== */
        .pagination .page-link {
            border-radius: 50% !important;
            padding: 8px 14px;
            color: #333;
            border-color: #ddd;
        }

        .pagination .active .page-link {
            background-color: #0d6efd;
            border-color: #0d6efd;
            color: #fff;
        }

        .pagination li {
            margin: 0 3px;
        }
        /* --- 1. NỀN VÀ TIÊU ĐỀ --- */
        .section-fire-sale {
            background: radial-gradient(circle, #fffbf0 0%, #fff 100%);
        }

        .fire-title {
            color: #d32f2f;
            text-shadow: 2px 2px 0px #ffcc80;
            letter-spacing: 1px;
        }

        .fire-line {
            height: 4px;
            width: 100px;
            background: linear-gradient(90deg, transparent, #ff5722, transparent);
            margin: 0 auto;
            border-radius: 2px;
        }

        /* --- 2. STYLE CHUNG CHO CARD --- */
        .fire-card {
            transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.05);
        }

            .fire-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 15px 30px rgba(255, 87, 34, 0.2); /* Bóng màu cam lửa */
                z-index: 10;
            }

        /* --- 3. TOP 1 KING (BÊN TRÁI) --- */
        .top-1-king {
            border: 2px solid #ffc107;
            background: linear-gradient(180deg, #fff 60%, #fff8e1 100%);
        }

            .top-1-king:hover {
                border-color: #ff6f00;
                box-shadow: 0 0 25px rgba(255, 193, 7, 0.5);
            }

        .top-img-big {
            height: 260px;
            object-fit: contain;
            transition: transform 0.4s;
        }

        .top-1-king:hover .top-img-big {
            transform: scale(1.15) rotate(-2deg);
        }

        .crown-icon {
            position: absolute;
            top: -15px;
            right: -15px;
            font-size: 4rem;
            color: rgba(255, 193, 7, 0.2);
            transform: rotate(15deg);
        }

        .text-fire {
            color: #d84315;
            background: -webkit-linear-gradient(#d84315, #ff5722);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .btn-fire-gradient {
            background: linear-gradient(45deg, #ff3d00, #ff9100);
            border: none;
            color: white;
            transition: filter 0.3s;
        }

            .btn-fire-gradient:hover {
                filter: brightness(1.1);
                color: white;
            }

        /* --- 4. TOP 2-7 (BÊN PHẢI) --- */
        .small-card {
            border: 1px solid #eee;
        }

            .small-card:hover {
                border-color: #ffab91;
            }

        .small-top-img {
            height: 140px; /* Tăng kích thước ảnh nhỏ lên */
            object-fit: contain;
            transition: transform 0.3s;
        }

        .small-card:hover .small-top-img {
            transform: scale(1.1);
        }

        /* --- 5. BADGE XẾP HẠNG (RANK) --- */
        .rank-badge {
            position: absolute;
            top: 0;
            left: 0;
            padding: 5px 12px;
            font-weight: 900;
            color: #fff;
            border-bottom-right-radius: 10px;
            z-index: 5;
            font-size: 0.9rem;
        }

        .rank-1 {
            background: linear-gradient(45deg, #ffca28, #ff6f00);
            font-size: 1.2rem;
            padding: 8px 20px;
        }

        .rank-2 {
            background: linear-gradient(45deg, #b0bec5, #78909c);
        }
        /* Màu Bạc */
        .rank-3 {
            background: linear-gradient(45deg, #d7ccc8, #8d6e63);
        }
        /* Màu Đồng */
        .rank-normal {
            background: linear-gradient(45deg, #ef5350, #c62828);
        }
        /* Màu Đỏ thường */
 
    </style>
}
<script>
    const slides = document.querySelectorAll(".hero-slide");
    const prevBtn = document.querySelector(".hero-btn.prev");
    const nextBtn = document.querySelector(".hero-btn.next");
    let index = 0;
    function showSlide(i) {
        slides.forEach(s => s.classList.remove("active"));
        slides[i].classList.add("active");
    }
    function nextSlide() {
        index = (index + 1) % slides.length;
        showSlide(index);
    }
    function prevSlide() {
        index = (index - 1 + slides.length) % slides.length;
        showSlide(index);
    }
    if (slides.length > 0 && prevBtn && nextBtn) {
        nextBtn.addEventListener("click", nextSlide);
        prevBtn.addEventListener("click", prevSlide);
        setInterval(nextSlide, 4000);
    }
</script>