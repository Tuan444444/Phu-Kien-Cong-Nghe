@model PhuKienCongNghe.ViewModels.ShopViewModel
@using X.PagedList
@using X.PagedList.Mvc.Core


@{
    ViewData["Title"] = "Cửa hàng";
    Layout = "_Layout";
}

<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2 class="text-center mb-4 section-title-spacing">Sản phẩm nổi bật</h2>
                </div>
            </div>
        </div>
        <div class="row featured__filter">

            @foreach (var featuredEntry in Model.FeaturedProducts)
            {
                // Gọi Partial View (Card) của Trang chủ
                <partial name="_FeaturedProductCard" model="featuredEntry" />
            }

            @if (!Model.FeaturedProducts.Any())
            {
                <div class="col-12">
                    <p class="text-center text-muted">Chưa có sản phẩm khuyến mãi nào.</p>
                </div>
            }
        </div>
    </div>
</section>
<hr class="my-5" />

<div class="container my-5">
    <h2 class="text-center mb-4">Tất cả sản phẩm</h2>

    @if (!Model.AllProducts.Any())
    {
        <div class="text-center p-5">
            <p class="fs-4 text-muted">Không tìm thấy sản phẩm nào phù hợp.</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model.AllProducts)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card h-100 product-card">

                        <a asp-action="Details" asp-controller="Product" asp-route-id="@item.MaSanPham">
                            <img src="@(string.IsNullOrEmpty(item.HinhAnh) ? "https://via.placeholder.com/300x300.png?text=No+Image" : item.HinhAnh)"
                                 class="card-img-top p-3" alt="@item.TenSanPham">
                        </a>

                        <div class="card-body p-3 d-flex flex-column">
                            <h5 class="card-title">
                                <a asp-action="Details" asp-controller="Product" asp-route-id="@item.MaSanPham" class="text-decoration-none text-dark">
                                    @item.TenSanPham
                                </a>
                            </h5>

                            <div class="product-price mb-2 mt-auto">
                                <span class="fw-bold text-danger fs-5">@item.Gia.ToString("N0") đ</span>
                            </div>

                            <div class="mt-2">
                                <a class="btn btn-sm btn-brand"
                                   asp-controller="Product"
                                   asp-action="Details"
                                   asp-route-id="@item.MaSanPham">Xem chi tiết</a>

                                <a class="btn btn-sm btn-outline-secondary"
                                   asp-controller="Cart"
                                   asp-action="AddToCart"
                                   asp-route-id="@item.MaSanPham">Thêm vào giỏ</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="row">
            <div class="col-12 d-flex justify-content-center">

                @Html.PagedListPager(Model.AllProducts, page => Url.Action("Index", new { page = page }),

                new PagedListRenderOptions
                {
                    UlElementClasses = new[] { "pagination" },
                    LiElementClasses = new[] { "page-item" },
                    PageClasses = new[] { "page-link" },
                    ActiveLiElementClass = "active",
                    DisplayLinkToNextPage = PagedListDisplayMode.Always,
                    DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                    LinkToNextPageFormat = "Sau",
                    LinkToPreviousPageFormat = "Trước"
                }
                        )

        </div>
    </div>
        }
</div>