@model PhuKienCongNghe.ViewModels.ShopViewModel
@using X.PagedList
@using X.PagedList.Mvc.Core

@{
    ViewData["Title"] = ViewData["Title"] ?? "Cửa hàng";
    Layout = "_Layout";
}

<style>
    :root {
        --shopee-orange: #ff6600;
        --shopee-orange-dark: #e65c00;
        --shopee-orange-light: #fff4eb;
    }

    .section-title h2 {
        font-weight: 700;
        color: var(--shopee-orange);
    }

    .product-card {
        border-radius: 14px;
        border: 1px solid #ffe0c2;
        transition: 0.3s;
        background: white;
    }

        .product-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 6px 15px rgba(0,0,0,0.08);
            border-color: var(--shopee-orange);
        }

        .product-card .card-title a {
            font-weight: 600;
            font-size: 0.95rem;
            transition: 0.2s;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

            .product-card .card-title a:hover {
                color: var(--shopee-orange) !important;
            }

    .btn-brand {
        background-color: var(--shopee-orange) !important;
        border-color: var(--shopee-orange) !important;
        color: #fff !important;
        font-weight: 600;
    }

        .btn-brand:hover {
            background-color: var(--shopee-orange-dark) !important;
        }

    .btn-outline-secondary {
        border-color: var(--shopee-orange) !important;
        color: var(--shopee-orange) !important;
        font-weight: 600;
    }

        .btn-outline-secondary:hover {
            background-color: var(--shopee-orange) !important;
            color: #fff !important;
        }

    /* Pagination */
    .pagination .page-link {
        color: var(--shopee-orange) !important;
        border-radius: 8px;
        margin: 0 4px;
        border: 1px solid #ffc7a8;
    }

    .pagination .page-item.active .page-link {
        background-color: var(--shopee-orange) !important;
        border-color: var(--shopee-orange) !important;
        color: white !important;
    }

    .pagination .page-link:hover {
        background-color: var(--shopee-orange-light) !important;
        border-color: var(--shopee-orange) !important;
    }
</style>

<!-- ====================== FEATURED ====================== -->
<section class="featured spad my-4">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title text-center mb-4">
                    <h2>Sản phẩm nổi bật</h2>
                </div>
            </div>
        </div>

        <div class="row">
            @if (Model.FeaturedProducts != null && Model.FeaturedProducts.Any())
            {
                foreach (var featured in Model.FeaturedProducts)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                        <div class="card h-100 product-card">
                            <div class="badge bg-danger position-absolute" style="top:10px; right:10px;">Hot</div>

                            <a asp-controller="Product" asp-action="Details" asp-route-id="@featured.Sanpham.MaSanPham">
                                <img src="@(string.IsNullOrEmpty(featured.Sanpham.HinhAnh) ? "https://via.placeholder.com/300x300" : featured.Sanpham.HinhAnh)"
                                     class="card-img-top p-3" alt="@featured.Sanpham.TenSanPham" />
                            </a>

                            <div class="card-body text-center">
                                <h6 class="card-title">
                                    <a class="text-decoration-none text-dark">@featured.Sanpham.TenSanPham</a>
                                </h6>
                                <span class="fw-bold text-danger">@featured.Sanpham.Gia.ToString("N0") đ</span>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-center text-muted">Chưa có sản phẩm nổi bật.</p>
            }
        </div>
    </div>
</section>

<hr class="my-5" style="opacity:0.15" />

<!-- ====================== ALL PRODUCTS ====================== -->
<div class="container my-5">
    <h2 class="text-center mb-4" style="color: var(--shopee-orange); font-weight:700;">
        @ViewData["Title"]
    </h2>

    @if (Model.AllProducts == null || !Model.AllProducts.Any())
    {
        <div class="text-center p-5">
            <p class="fs-4 text-muted">Không tìm thấy sản phẩm nào phù hợp.</p>
            <a asp-action="Index" class="btn btn-brand mt-3">Xem tất cả sản phẩm</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model.AllProducts)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card h-100 product-card">

                        <a asp-controller="Product" asp-action="Details" asp-route-id="@item.MaSanPham">
                            <img src="@(string.IsNullOrEmpty(item.HinhAnh) ?
                                "https://via.placeholder.com/300x300?text=No+Image" : item.HinhAnh)"
                                 class="card-img-top p-3"
                                 style="height:250px; object-fit:contain;" />
                        </a>

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">
                                <a asp-action="Details"
                                   asp-controller="Product"
                                   asp-route-id="@item.MaSanPham"
                                   class="text-decoration-none text-dark">
                                    @item.TenSanPham
                                </a>
                            </h5>

                            <div class="product-price mb-2 mt-auto">
                                <span class="text-danger fw-bold fs-5">@item.Gia.ToString("N0") đ</span>
                            </div>

                            <div class="d-grid gap-2">
                                <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                    <input type="hidden" name="id" value="@item.MaSanPham" />
                                    <button class="btn btn-sm btn-outline-secondary">
                                        <i class="bi bi-cart-plus"></i> Thêm vào giỏ
                                    </button>
                                </form>

                                <a class="btn btn-sm btn-brand"
                                   asp-controller="Product"
                                   asp-action="Details"
                                   asp-route-id="@item.MaSanPham">
                                    Xem chi tiết
                                </a>
                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>

        <!-- ====================== PAGINATION ====================== -->
        <div class="row mt-4">
            <div class="col-12 d-flex justify-content-center">
                @Html.PagedListPager(
                         Model.AllProducts,
                         page => Url.Action(
                         ViewContext.RouteData.Values["action"]?.ToString() ?? "Index",
                         new { page, query = ViewData["Query"], id = ViewData["CategoryId"] }
                         ),
                         new PagedListRenderOptions
            {
                UlElementClasses = new[] { "pagination" },
                LiElementClasses = new[] { "page-item" },
                PageClasses = new[] { "page-link" },
                ActiveLiElementClass = "active"
            }
                         )
            </div>
        </div>
    }
</div>
