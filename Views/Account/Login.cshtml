@model PhuKienCongNghe.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="d-flex justify-content-center align-items-center vh-100" style="background: linear-gradient(135deg, #fffaf6, #fff4ee);">
    <div class="card shadow-lg p-4" style="width: 380px; border-radius: 16px;">
        <div class="text-center mb-3">
            <h4 class="fw-bold text-orange">
                <i class="bi bi-box-arrow-in-right"></i> Đăng Nhập
            </h4>
        </div>

        <form asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger mb-2"></div>

            <div class="mb-3">
                <label asp-for="TenDangNhap" class="form-label fw-semibold"></label>
                <input asp-for="TenDangNhap" class="form-control" placeholder="Nhập tên đăng nhập" />
                <span asp-validation-for="TenDangNhap" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MatKhau" class="form-label fw-semibold"></label>
                <input asp-for="MatKhau" class="form-control" type="password" placeholder="Nhập mật khẩu" />
                <span asp-validation-for="MatKhau" class="text-danger"></span>
            </div>

            <button type="submit" class="btn w-100 text-white fw-semibold" style="background-color: #ff6600;">Đăng nhập</button>

            <div class="text-center mt-3">
                <a href="#" class="text-decoration-none" style="color:#ff6600;">Quên mật khẩu?</a>
            </div>

            <div class="text-center mt-2">
                <span>Chưa có tài khoản? </span>
                <a asp-action="Register" class="text-decoration-none" style="color:#ff6600;">Đăng ký ngay</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .text-orange {
        color: #ff6600;
    }

    input.form-control {
        background-color: #eef3ff;
        border: none;
        border-radius: 10px;
        padding: 10px 12px;
    }

    .btn:hover {
        background-color: #e65c00 !important;
    }

    .card {
        background: #fffdfb;
    }
</style>
