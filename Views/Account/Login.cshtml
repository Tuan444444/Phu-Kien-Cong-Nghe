@model PhuKienCongNghe.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        :root {
            --shopee-orange: #ff6600;
            --shopee-orange-dark: #e65c00;
            --shopee-orange-light: #fff4ec;
        }

        body {
            background-color: var(--shopee-orange-light) !important;
        }

        .card {
            border-radius: 12px;
            border: 1px solid #f2f2f2;
        }

        .card-title {
            color: var(--shopee-orange);
            font-weight: 600;
        }

        .btn-primary {
            background-color: var(--shopee-orange) !important;
            border-color: var(--shopee-orange) !important;
        }

            .btn-primary:hover {
                background-color: var(--shopee-orange-dark) !important;
                border-color: var(--shopee-orange-dark) !important;
            }

        a {
            color: var(--shopee-orange) !important;
            font-weight: 500;
        }

            a:hover {
                color: var(--shopee-orange-dark) !important;
            }

        .form-control:focus {
            border-color: var(--shopee-orange);
            box-shadow: 0 0 0 0.15rem rgba(255, 102, 0, 0.25);
        }
    </style>

</head>
<body>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h4 class="card-title mb-3 text-center">Đăng nhập</h4>

                        <form asp-action="Login" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                            <div class="mb-3">
                                <label asp-for="TenDangNhap" class="form-label"></label>
                                <input asp-for="TenDangNhap" class="form-control" />
                                <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="MatKhau" class="form-label"></label>
                                <input asp-for="MatKhau" class="form-control" />
                                <span asp-validation-for="MatKhau" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>

                            <div class="mt-3 text-center small">
                                <a asp-action="Register">Chưa có tài khoản? Đăng ký</a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
