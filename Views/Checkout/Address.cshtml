@model PhuKienCongNghe.ViewModels.CheckoutViewModel
@{
    ViewData["Title"] = "Thông tin giao hàng";
}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h3>1/3: Thông tin giao hàng</h3>
            <hr />
            <form asp-action="Address" asp-controller="Checkout" method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <h4>Thông tin người nhận</h4>
                <div class="form-group">
                    <label asp-for="HoTenNguoiNhan">Họ tên người nhận</label>
                    <input asp-for="HoTenNguoiNhan" class="form-control" />
                    <span asp-validation-for="HoTenNguoiNhan" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="SoDienThoai">Số điện thoại</label>
                        <input asp-for="SoDienThoai" class="form-control" />
                        <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                    </div>
                </div>

                <hr />
                <h4>Địa chỉ nhận hàng</h4>

                <input type="hidden" asp-for="TinhThanh" id="province-name" />
                <input type="hidden" asp-for="QuanHuyen" id="district-name" />
                <input type="hidden" asp-for="PhuongXa" id="ward-name" />

                <div class="form-group">
                    <label>Tỉnh/Thành phố</label>
                    <select class="form-control" id="province-select">
                        <option value="">Chọn Tỉnh/Thành</option>
                    </select>
                    <span asp-validation-for="TinhThanh" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label>Quận/Huyện</label>
                        <select class="form-control" id="district-select">
                            <option value="">Chọn Quận/Huyện</option>
                        </select>
                        <span asp-validation-for="QuanHuyen" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Phường/Xã</label>
                        <select class="form-control" id="ward-select">
                            <option value="">Chọn Phường/Xã</option>
                        </select>
                        <span asp-validation-for="PhuongXa" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="DiaChiCuThe">Địa chỉ cụ thể (Số nhà, tên đường)</label>
                    <input asp-for="DiaChiCuThe" class="form-control" />
                    <span asp-validation-for="DiaChiCuThe" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GhiChu">Ghi chú</label>
                    <textarea asp-for="GhiChu" class="form-control" rows="3"></textarea>
                </div>

                <hr />
                <button type="submit" class="btn btn-primary w-100">Tiếp tục thanh toán</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            const host = "https://provinces.open-api.vn/api/";

            // Tải Tỉnh/Thành
            $.get(host + "?depth=1", function (data) {
                $.each(data, function (index, item) {
                    $("#province-select").append('<option value="' + item.code + '">' + item.name + '</option>');
                });
            });

            // Xử lý khi chọn Tỉnh/Thành
            $("#province-select").change(function () {
                var provinceCode = $(this).val();
                var provinceName = $("#province-select option:selected").text();
                $("#province-name").val(provinceName); // <-- LƯU TÊN VÀO INPUT ẨN

                if (provinceCode) {
                    $.get(host + "p/" + provinceCode + "?depth=2", function (data) {
                        $("#district-select").html('<option value="">Chọn Quận/Huyện</option>');
                        $("#ward-select").html('<option value="">Chọn Phường/Xã</option>');
                        $("#district-name").val("");
                        $("#ward-name").val("");

                        $.each(data.districts, function (index, item) {
                            $("#district-select").append('<option value="' + item.code + '">' + item.name + '</option>');
                        });
                    });
                }
            });

            // Xử lý khi chọn Quận/Huyện
            $("#district-select").change(function () {
                var districtCode = $(this).val();
                var districtName = $("#district-select option:selected").text();
                $("#district-name").val(districtName); // <-- LƯU TÊN VÀO INPUT ẨN

                if (districtCode) {
                    $.get(host + "d/" + districtCode + "?depth=2", function (data) {
                        $("#ward-select").html('<option value="">Chọn Phường/Xã</option>');
                        $("#ward-name").val("");

                        $.each(data.wards, function (index, item) {
                            $("#ward-select").append('<option value="' + item.code + '">' + item.name + '</option>');
                        });
                    });
                }
            });

            // Xử lý khi chọn Phường/Xã
             $("#ward-select").change(function () {
                var wardName = $("#ward-select option:selected").text();
                $("#ward-name").val(wardName); // <-- LƯU TÊN VÀO INPUT ẨN
             });
        });
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
