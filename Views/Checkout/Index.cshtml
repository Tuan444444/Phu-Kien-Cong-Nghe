@model PhuKienCongNghe.ViewModels.CheckoutViewModel
@{
    // Gán tiêu đề trang
    ViewData["Title"] = "Thanh toán";
}

<style>
    /* ==============================================
           ĐỊNH NGHĨA MÀU SHOPEE (THỐNG NHẤT TOÀN VIEW)
           ============================================== */
    :root {
        --shopee-orange: #ff6600; /* Màu cam Shopee chính */
        --shopee-orange-dark: #e65c00; /* Cam đậm - hover */
        --shopee-orange-light: #fffaf5; /* Cam nhạt - nền */
    }

    /* Chữ tiêu đề dùng màu Shopee */
    h4 {
        color: var(--shopee-orange);
        font-weight: 700;
    }

    /* Form label đậm hơn */
    label {
        font-weight: 600;
        color: #333;
    }

    /* Input focus highlight cam */
    .form-control:focus {
        border-color: var(--shopee-orange) !important;
        box-shadow: 0 0 0 .2rem rgba(255,102,0,.25);
    }

    /* Nút Shopee */
    .btn-brand {
        background-color: var(--shopee-orange) !important;
        border-color: var(--shopee-orange) !important;
        font-weight: 600;
        color: white !important;
        transition: 0.2s;
    }

        .btn-brand:hover {
            background-color: var(--shopee-orange-dark) !important;
        }

    /* Thanh toán tổng */
    .text-total {
        color: var(--shopee-orange);
        font-weight: 700;
    }

    /* Viền card tóm tắt đơn hàng */
    .card {
        border: 1px solid #ffd6ba;
        border-radius: 12px;
    }

    /* Radio button khi chọn */
    .form-check-input:checked {
        border-color: var(--shopee-orange);
        background-color: var(--shopee-orange);
    }

    /* Modal tiêu đề màu cam */
    .modal-title {
        color: var(--shopee-orange);
        font-weight: 700;
    }
</style>

<!-- ==============================================
     MODAL XÁC NHẬN ĐẶT HÀNG
================================================= -->
<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <!-- Tiêu đề modal -->
            <div class="modal-header">
                <h5 class="modal-title" id="confirmModalLabel">Xác nhận thông tin đặt hàng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <!-- Nội dung (JS sẽ đổ vào) -->
            <div class="modal-body" id="confirm-modal-body"></div>

            <!-- Footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kiểm tra lại</button>
                <button type="submit" form="checkout-form" class="btn btn-brand">Xác nhận Đặt Hàng</button>
            </div>
        </div>
    </div>
</div>


<!-- ==============================================
     FORM THANH TOÁN
================================================= -->
<div class="container mt-5">
    <form asp-action="ConfirmOrder" method="post" id="checkout-form">
        @Html.AntiForgeryToken()

        <div class="row">
            <!-- =============================
                 CỘT TRÁI — NHẬP THÔNG TIN
            ============================== -->
            <div class="col-md-7">

                <h4>Thông tin người nhận</h4>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Họ tên -->
                <div class="form-group">
                    <label asp-for="HoTenNguoiNhan"></label>
                    <input asp-for="HoTenNguoiNhan" class="form-control" />
                    <span asp-validation-for="HoTenNguoiNhan" class="text-danger"></span>
                </div>

                <!-- Email + SĐT -->
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="SoDienThoai"></label>
                        <input asp-for="SoDienThoai" class="form-control" />
                        <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                    </div>
                </div>

                <hr />
                <h4>Địa chỉ nhận hàng</h4>

                <!-- Input ẩn chứa tên -->
                <input type="hidden" asp-for="TinhThanh" id="province-name" />
                <input type="hidden" asp-for="QuanHuyen" id="district-name" />
                <input type="hidden" asp-for="PhuongXa" id="ward-name" />

                <!-- Chọn Tỉnh / Huyện / Xã -->
                <div class="row">
                    <div class="col-md-4">
                        <label>Thành phố/Tỉnh</label>
                        <select class="form-control" id="province-select">
                            <option value="">Chọn Thành phố/Tỉnh</option>
                        </select>
                        <span asp-validation-for="TinhThanh" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label>Quận/Huyện</label>
                        <select class="form-control" id="district-select">
                            <option value="">Chọn Quận/Huyện</option>
                        </select>
                        <span asp-validation-for="QuanHuyen" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label>Phường/Xã</label>
                        <select class="form-control" id="ward-select">
                            <option value="">Chọn Phường/Xã</option>
                        </select>
                        <span asp-validation-for="PhuongXa" class="text-danger"></span>
                    </div>
                </div>

                <!-- Địa chỉ cụ thể -->
                <div class="form-group mt-2">
                    <label asp-for="DiaChiCuThe">Địa chỉ cụ thể (Số nhà, tên đường)</label>
                    <input asp-for="DiaChiCuThe" class="form-control" />
                    <span asp-validation-for="DiaChiCuThe" class="text-danger"></span>
                </div>

                <hr />
                <h4>Phương thức thanh toán</h4>

                <!-- COD -->
                <div class="form-check">
                    <input type="radio" asp-for="PaymentMethod" value="COD" id="cod" class="form-check-input" checked />
                    <label for="cod" class="form-check-label">Thanh toán khi nhận hàng (COD)</label>
                </div>

                <!-- Online -->
                <div class="form-check">
                    <input type="radio" asp-for="PaymentMethod" value="Online" id="online" class="form-check-input" disabled />
                    <label for="online" class="form-check-label text-muted">Thanh toán trực tuyến (Tạm khóa)</label>
                </div>
            </div>


            <!-- =============================
                 CỘT PHẢI — TÓM TẮT ĐƠN HÀNG
            ============================== -->
            <div class="col-md-5">
                <div class="card" style="position: sticky; top: 80px;">
                    <div class="card-body">

                        <h4 class="card-title">Tóm tắt đơn hàng</h4>

                        <!-- Danh sách sản phẩm -->
                        <ul class="list-group list-group-flush">
                            @foreach (var item in Model.CartItems)
                            {
                                <li class="list-group-item d-flex justify-content-between">
                                    <div>
                                        <img src="@item.HinhAnh"
                                             alt="@item.TenSanPham"
                                             style="width: 50px; height: 50px; object-fit: cover; margin-right: 10px;" />
                                        @item.TenSanPham (x @item.SoLuong)
                                    </div>
                                    <span>@item.ThanhTien.ToString("N0") đ</span>
                                </li>
                            }
                        </ul>

                        <hr />

                        <!-- Tổng tiền -->
                        <div class="d-flex justify-content-between">
                            <h5>Tổng cộng</h5>
                            <h5 class="text-total">@Model.TongTien.ToString("N0") đ</h5>
                        </div>

                        <!-- Nút mở modal -->
                        <button type="button" id="btn-open-confirm-modal" class="btn btn-brand w-100 mt-3">
                            XÁC NHẬN THÔNG TIN
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>


<!-- ==============================================
     SCRIPT LOAD TỈNH / HUYỆN / XÃ
================================================= -->
@section Scripts {
    <script>
        $(document).ready(function () {
            const host = "https://provinces.open-api.vn/api/";

            // Tải danh sách tỉnh
            $.get(host + "?depth=1", function (data) {
                $.each(data, function (_, item) {
                    $("#province-select").append(`<option value="${item.code}">${item.name}</option>`);
                });
            });

            // Khi chọn tỉnh
            $("#province-select").change(function () {
                let provinceCode = $(this).val();
                let provinceName = $("#province-select option:selected").text();
                $("#province-name").val(provinceName); // gán hidden

                if (provinceCode) {
                    $.get(host + "p/" + provinceCode + "?depth=2", function (data) {
                        $("#district-select").html('<option>Chọn Quận/Huyện</option>');
                        $("#ward-select").html('<option>Chọn Phường/Xã</option>');
                        $.each(data.districts, function (_, item) {
                            $("#district-select").append(`<option value="${item.code}">${item.name}</option>`);
                        });
                    });
                }
            });

            // Khi chọn huyện
            $("#district-select").change(function () {
                let districtCode = $(this).val();
                let districtName = $("#district-select option:selected").text();
                $("#district-name").val(districtName);

                if (districtCode) {
                    $.get(host + "d/" + districtCode + "?depth=2", function (data) {
                        $("#ward-select").html('<option>Chọn Phường/Xã</option>');
                        $.each(data.wards, function (_, item) {
                            $("#ward-select").append(`<option value="${item.code}">${item.name}</option>`);
                        });
                    });
                }
            });

            // Khi chọn phường
            $("#ward-select").change(function () {
                let wardName = $("#ward-select option:selected").text();
                $("#ward-name").val(wardName);
            });
        });
    </script>


    <!-- ==============================================
         SCRIPT MỞ MODAL XÁC NHẬN
    ================================================= -->
    <script>
        $(document).ready(function () {
            $('#btn-open-confirm-modal').on('click', function () {

                // Lấy dữ liệu người dùng nhập
                var modalContent = `
                    <h6>Thông tin người nhận:</h6>
                    <p><strong>Họ tên:</strong> ${$('#HoTenNguoiNhan').val()}<br/>
                       <strong>SĐT:</strong> ${$('#SoDienThoai').val()}<br/>
                       <strong>Email:</strong> ${$('#Email').val()}</p>

                    <h6>Địa chỉ nhận hàng:</h6>
                    <p>${$('#DiaChiCuThe').val()}, ${$('#ward-name').val()}, ${$('#district-name').val()}, ${$('#province-name').val()}</p>

                    <h6>Phương thức thanh toán:</h6>
                    <p>${$('input[name="PaymentMethod"]:checked').val() === "COD" ? "Thanh toán khi nhận hàng" : "Online"}</p>

                    <hr/>
                    <h5>Tổng tiền: <span class="text-total">@Model.TongTien.ToString("N0") đ</span></h5>
                    <small>Vui lòng kiểm tra kỹ thông tin trước khi đặt hàng.</small>
                `;

                // Đổ vào modal body
                $('#confirm-modal-body').html(modalContent);

                // Mở modal
                new bootstrap.Modal(document.getElementById('confirmModal')).show();
            });
        });
    </script>

    @{
        // Để validate client-side
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
