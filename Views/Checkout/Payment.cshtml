@model PhuKienCongNghe.ViewModels.CheckoutViewModel
@{
    ViewData["Title"] = "Thanh toán";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-7">
            <h3>2/3: Phương thức thanh toán</h3>
            <hr />

            <form asp-action="Payment" method="post">
                @Html.AntiForgeryToken()

                <h4>Vui lòng chọn phương thức thanh toán của bạn:</h4>

                <div class="form-group">
                    <div class="form-check">
                        <input type="radio" asp-for="PaymentMethod" value="COD" id="cod" class="form-check-input" checked />
                        <label for="cod" class="form-check-label">
                            <strong>Thanh toán khi nhận hàng (COD)</strong>
                            <br />
                            <small class="text-muted">Bạn sẽ thanh toán bằng tiền mặt khi nhận được hàng.</small>
                        </label>
                    </div>
                    <hr />
                    <div class="form-check">
                        <input type="radio" asp-for="PaymentMethod" value="Online" id="online" class="form-check-input" />
                        <label for="online" class="form-check-label">
                            <strong>Thanh toán trực tuyến (VNPAY/MoMo...)</strong>
                            <br />
                            <small class="text-muted">(Chức năng này đang được phát triển. Vui lòng chọn COD)</small>
                        </label>
                    </div>
                    <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                </div>

                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <hr />
                <div class="d-flex justify-content-between">
                    <a asp-action="Address" class="btn btn-outline-secondary">Quay lại</a>
                    <button type="submit" class="btn btn-primary">Tiếp tục</button>
                </div>
            </form>
        </div>

        <div class="col-md-5">
            <div class="card" style="position: sticky; top: 80px;">
                <div class="card-body">
                    <h4 class="card-title">Đơn hàng của bạn</h4>

                    <ul class="list-group list-group-flush">
                        @foreach (var item in Model.CartItems)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <img src="@item.HinhAnh" alt="@item.TenSanPham" style="width: 40px; height: 40px; object-fit: cover; margin-right: 10px;" />
                                    @item.TenSanPham (x @item.SoLuong)
                                </div>
                                <span>@item.ThanhTien.ToString("N0") đ</span>
                            </li>
                        }
                    </ul>
                    <hr />
                    <div class="d-flex justify-content-between">
                        <h5>Tổng cộng</h5>
                        <h5 class="text-danger">@Model.TongTien.ToString("N0") đ</h5>
                    </div>

                    <hr />
                    <h6>Địa chỉ nhận hàng:</h6>
                    <small>
                        <strong>@Model.HoTenNguoiNhan</strong> - @Model.SoDienThoai
                        <br />
                        @Model.DiaChiCuThe, @Model.PhuongXa, @Model.QuanHuyen, @Model.TinhThanh
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>