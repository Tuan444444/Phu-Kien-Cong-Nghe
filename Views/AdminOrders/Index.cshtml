@model IEnumerable<PhuKienCongNghe.Models.Donhang>
@{
    ViewData["Title"] = ViewData["Title"];
    Layout = "_AdminLayout";
    var currentStatus = ViewBag.CurrentStatus as string;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body d-flex justify-content-start flex-wrap">

        <a asp-action="Index" asp-route-status=""
           class="btn @(string.IsNullOrEmpty(currentStatus) ? "btn-brand" : "btn-outline-secondary") me-2 mb-2">
            Tất cả Đơn hàng
        </a>

        @foreach (var status in ViewBag.TrangThaiList as List<string>)
        {
            <a asp-action="Index" asp-route-status="@status"
               class="btn @(currentStatus == status ? "btn-brand" : "btn-outline-secondary") me-2 mb-2">
                @status
            </a>
        }
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>Mã ĐH</th>
                        <th>Khách hàng</th>
                        <th>Ngày đặt</th>
                        <th class="text-end">Tổng tiền</th>
                        <th class="text-center">Trạng thái</th>
                        <th class="text-end">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold">#@item.MaDonHang</td>
                            <td>
                                <div>@item.HoTenNguoiNhan</div>
                                <small class="text-muted">@item.SDTNguoiNhan</small>
                            </td>
                            <td>@item.NgayDat?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="text-end fw-bold text-danger">@item.TongTien.ToString("N0") đ</td>

                            <td class="text-center">
                                @{
                                    var statusClass = "secondary"; // Mặc định

                                    if (item.TrangThai == "Đang xử lý") { statusClass = "primary"; }
                                    else if (item.TrangThai == "Hoàn thành") { statusClass = "success"; }
                                    else if (item.TrangThai == "Đã hủy") { statusClass = "danger"; }
                                    else if (item.TrangThai == "Đang giao") { statusClass = "info"; }
                                }
                                <span class="badge bg-@statusClass">@item.TrangThai</span>
                            </td>

                            <td class="text-end">
                                <a asp-action="Details" asp-route-id="@item.MaDonHang" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i> Xem chi tiết
                                </a>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                Không tìm thấy đơn hàng nào.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>