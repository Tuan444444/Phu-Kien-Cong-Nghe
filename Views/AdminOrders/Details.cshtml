@model PhuKienCongNghe.Models.Donhang
@{
    ViewData["Title"] = ViewData["Title"];
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Quay lại Danh sách
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow-sm mb-4">
            <div class="card-header">
                <h5 class="mb-0">Các sản phẩm trong đơn</h5>
            </div>
            <div class="card-body">
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th>Sản phẩm</th>
                            <th class="text-center">Số lượng</th>
                            <th class="text-end">Đơn giá</th>
                            <th class="text-end">Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Chitietdonhangs)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="@(item.MaSanPhamNavigation?.HinhAnh ?? "/images/placeholder.png")"
                                             alt="@item.MaSanPhamNavigation?.TenSanPham"
                                             style="width: 40px; height: 40px; object-fit: cover; border-radius: 4px;"
                                             class="me-2" />
                                        <span class="fw-bold">@item.MaSanPhamNavigation?.TenSanPham</span>
                                    </div>
                                </td>
                                <td class="text-center">@item.SoLuong</td>
                                <td class="text-end">@item.DonGia.ToString("N0") đ</td>
                                <td class="text-end fw-bold">@((item.SoLuong * item.DonGia).ToString("N0")) đ</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="table-light">
                            <td colspan="3" class="text-end fw-bold fs-5">TỔNG CỘNG:</td>
                            <td class="text-end fw-bold fs-5 text-danger">@Model.TongTien.ToString("N0") đ</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow-sm mb-4">
            <div class="card-header">
                <h5 class="mb-0">Cập nhật Trạng thái</h5>
            </div>
            <div class="card-body">
                <form asp-action="UpdateStatus" method="post" asp-antiforgery="true">
                    <input type="hidden" asp-for="MaDonHang" />

                    <div class="mb-3">
                        <label for="trangThai" class="form-label">Trạng thái Đơn hàng</label>
                        <select name="trangThai" class="form-select" asp-items="ViewBag.TrangThaiOptions"></select>
                    </div>
                    <button type="submit" class="btn btn-brand w-100">
                        <i class="bi bi-check-circle"></i> Cập nhật
                    </button>
                </form>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header">
                <h5 class="mb-0">Thông tin Vận chuyển</h5>
            </div>
            <div class="card-body">
                <p class="mb-2"><strong>Khách hàng:</strong> @Model.HoTenNguoiNhan</p>
                <p class="mb-2"><strong>Số điện thoại:</strong> @Model.SDTNguoiNhan</p>
                <p class="mb-0"><strong>Địa chỉ giao:</strong> @Model.DiaChiNhanHang</p>
                <hr />
                <p class="mb-0 text-muted">Ngày đặt: @Model.NgayDat?.ToString("dd/MM/yyyy HH:mm")</p>
            </div>
        </div>
    </div>
</div>