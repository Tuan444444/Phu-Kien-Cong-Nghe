@model PhuKienCongNghe.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<style>
    :root {
        --shopee-orange: #ff6600;
        --shopee-orange-dark: #e65c00;
        --shopee-orange-light: #fff4eb;
    }

    .card-change {
        border-radius: 14px;
        border: 1px solid #ffe6d5;
        transition: 0.3s;
    }

        .card-change:hover {
            border-color: var(--shopee-orange);
            box-shadow: 0px 6px 18px rgba(0,0,0,0.06);
        }

    .label-orange {
        color: var(--shopee-orange);
        font-weight: 600;
    }

    input.form-control {
        border-radius: 8px;
    }

    .btn-orange {
        background-color: var(--shopee-orange) !important;
        border: none;
        color: #fff !important;
        font-weight: 600;
        border-radius: 8px;
        padding: 10px;
        transition: 0.2s;
    }

        .btn-orange:hover {
            background-color: var(--shopee-orange-dark) !important;
            color: #fff !important;
        }
</style>


<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">

            <h2 class="mb-4 text-center text-orange">@ViewData["Title"]</h2>

            <div class="card shadow-sm card-change">
                <div class="card-body p-4">

                    <form asp-action="ChangePassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="CurrentPassword" class="form-label label-orange"></label>
                            <input asp-for="CurrentPassword" type="password" class="form-control" />
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>

                        <hr class="my-4" />

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label label-orange"></label>
                            <input asp-for="NewPassword" type="password" class="form-control" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmNewPassword" class="form-label label-orange"></label>
                            <input asp-for="ConfirmNewPassword" type="password" class="form-control" />
                            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-orange w-100 mt-3">
                            <i class="bi bi-shield-lock-fill me-2"></i>
                            Xác nhận đổi mật khẩu
                        </button>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
