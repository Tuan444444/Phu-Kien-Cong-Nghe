@model List<PhuKienCongNghe.Models.Donhang>
@{
    ViewData["Title"] = "Lịch sử mua hàng";
}

<div class="container my-5">
    <h2 class="mb-4 text-center">@ViewData["Title"]</h2>

    @if (!Model.Any())
    {
        <div class="text-center p-5 border rounded">
            <p class="fs-4 text-muted">Bạn chưa có đơn hàng nào.</p>
            <a asp-controller="Product" asp-action="Index" class="btn btn-primary" style="background-color: #ff6600; border:none;">Bắt đầu mua sắm</a>
        </div>
    }
    else
    {
        <div class="accordion" id="orderAccordion">
            @foreach (var order in Model)
            {
                <div class="accordion-item mb-3 shadow-sm">
                    <h2 class="accordion-header" id="heading-@order.MaDonHang">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@order.MaDonHang" aria-expanded="false" aria-controls="collapse-@order.MaDonHang">
                            <div class="d-flex justify-content-between w-100 me-3">
                                <span><strong>Đơn hàng:</strong> #@order.MaDonHang</span>
                                <span><strong>Ngày đặt:</strong> @order.NgayDat?.ToString("dd/MM/yyyy")</span>
                                <span><strong>Trạng thái:</strong> <span class="badge bg-success">@order.TrangThai</span></span>
                                <span><strong>Tổng tiền:</strong> <span class="fw-bold text-danger">@order.TongTien.ToString("N0") đ</span></span>
                            </div>
                        </button>
                    </h2>
                    <div id="collapse-@order.MaDonHang" class="accordion-collapse collapse" aria-labelledby="heading-@order.MaDonHang" data-bs-parent="#orderAccordion">
                        <div class="accordion-body">
                            <h6 class="fw-bold">Chi tiết đơn hàng:</h6>
                            <table class="table table-borderless table-hover align-middle">
                                <thead>
                                    <tr>
                                        <th colspan="2">Sản phẩm</th>
                                        <th>Đơn giá</th>
                                        <th>Số lượng</th>
                                        <th>Thành tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in order.Chitietdonhangs)
                                    {
                                        <tr>
                                            <td style="width: 80px;">
                                                <img src="@(string.IsNullOrEmpty(item.MaSanPhamNavigation.HinhAnh) ? "https://via.placeholder.com/100" : item.MaSanPhamNavigation.HinhAnh)" class="img-fluid rounded" style="width: 60px; height: 60px; object-fit: cover;" alt="@item.MaSanPhamNavigation.TenSanPham" />
                                            </td>
                                            <td>
                                                <a asp-controller="Product" asp-action="Details" asp-route-id="@item.MaSanPham" class="text-decoration-none text-dark">
                                                    @item.MaSanPhamNavigation.TenSanPham
                                                </a>
                                            </td>
                                            <td>@item.DonGia.ToString("N0") đ</td>
                                            <td>x @item.SoLuong</td>
                                            <td>@((item.DonGia * item.SoLuong).ToString("N0")) đ</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>