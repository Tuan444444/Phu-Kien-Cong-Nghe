@model PhuKienCongNghe.Models.Nguoidung
@{
    ViewData["Title"] = "Chi tiết Người dùng";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Quay lại Danh sách
    </a>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-header">
                <h5 class="mb-0">Thông tin Tài khoản</h5>
            </div>
            <div class="card-body">
                <p class="mb-2"><strong>Họ tên:</strong> @Model.HoTen</p>
                <p class="mb-2"><strong>Tên đăng nhập:</strong> @Model.TenDangNhap</p>
                <p class="mb-2"><strong>Email:</strong> @Model.Email</p>
                <p class="mb-2"><strong>Vai trò:</strong> @Model.VaiTro</p>
                <hr />
                <p class="mb-2"><strong>SĐT:</strong> @(Model.SoDienThoai ?? "[Chưa cập nhật]")</p>
                <p class="mb-0"><strong>Địa chỉ:</strong> @(Model.DiaChi ?? "[Chưa cập nhật]")</p>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header">
                <h5 class="mb-0">Lịch sử Đơn hàng (@Model.Donhangs.Count() đơn)</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Mã ĐH</th>
                                <th>Ngày đặt</th>
                                <th>Trạng thái</th>
                                <th class="text-end">Tổng tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.Donhangs.OrderByDescending(d => d.NgayDat))
                            {
                                <tr>
                                    <td class="fw-bold">
                                        <a asp-controller="AdminOrders" asp-action="Details" asp-route-id="@order.MaDonHang">
                                            #@order.MaDonHang
                                        </a>
                                    </td>
                                    <td>@order.NgayDat?.ToString("dd/MM/yyyy")</td>
                                    <td>@order.TrangThai</td>
                                    <td class="text-end text-danger">@order.TongTien.ToString("N0") đ</td>
                                </tr>
                            }
                            @if (!Model.Donhangs.Any())
                            {
                                <tr>
                                    <td colspan="4" class="text-center text-muted">Người dùng này chưa đặt đơn hàng nào.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>