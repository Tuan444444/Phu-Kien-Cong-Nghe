@model IEnumerable<PhuKienCongNghe.Models.Sanpham>

@{
    ViewData["Title"] = "Quản lý Sản phẩm";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>

    <div class="btn-group">
        <a asp-action="Create" class="btn btn-brand">
            <i class="bi bi-plus-circle me-2"></i>Thêm Sản phẩm mới
        </a>

        <a asp-action="Promotions" class="btn btn-outline-danger">
            <i class="bi bi-star me-2"></i> Set Khuyến mãi
        </a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-white border-0 pt-3">
        <form asp-action="Index" method="get">
            <div class="row g-3">
                <div class="col-md-5">
                    <label class="form-label">Tìm theo tên</label>
                    <input type="text"
                           name="searchString"
                           class="form-control"
                           placeholder="Nhập tên sản phẩm..."
                           value="@ViewBag.CurrentSearch" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Lọc theo danh mục</label>
                    <select name="categoryId" class="form-select" asp-items="ViewBag.Categories">
                        <option value="">-- Tất cả Danh mục --</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Lọc theo giá</label>
                    @{
                        var currentRange = ViewBag.CurrentPriceRange as string;
                    }
                    <select name="priceRange" class="form-select">
                        <option value="">-- Tất cả Giá --</option>
                        <option value="1" selected="@(currentRange == "1")">Dưới 500.000đ</option>
                        <option value="2" selected="@(currentRange == "2")">500.000đ - 1.000.000đ</option>
                        <option value="3" selected="@(currentRange == "3")">Trên 1.000.000đ</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-brand me-2">
                        <i class="bi bi-search"></i> Lọc
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Xóa</a>
                </div>
            </div>
        </form>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th style="width: 80px;">Ảnh</th>
                        <th>Tên Sản phẩm</th>
                        <th style="width: 150px;">Danh mục</th>
                        <th style="width: 120px;">Giá</th>
                        <th style="width: 120px;">SL Tồn</th>
                        <th class="text-end" style="width: 160px;">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="@(string.IsNullOrEmpty(item.HinhAnh) ? "/images/placeholder.png" : item.HinhAnh)"
                                     alt="@item.TenSanPham"
                                     class="img-thumbnail"
                                     style="width: 40px; height: 40px; object-fit: cover;" />
                            </td>
                            <td class="fw-bold">@item.TenSanPham</td>
                            <td>@item.MaDanhMucNavigation?.TenDanhMuc</td>
                            <td class="text-danger fw-bold">@item.Gia.ToString("N0") đ</td>
                            <td>
                                @if (item.SoLuongTon < 10 && item.SoLuongTon > 0)
                                {
                                    <span class="text-warning fw-bold">@item.SoLuongTon (Sắp hết)</span>
                                }
                                else if (item.SoLuongTon <= 0)
                                {
                                    <span class="text-danger fw-bold">Hết hàng</span>
                                }
                                else
                                {
                                    @item.SoLuongTon
                                }
                            </td>
                            <td class="text-end">
                                <div class="d-flex justify-content-end">
                                    <a asp-action="Edit" asp-route-id="@item.MaSanPham" class="btn btn-sm btn-outline-primary me-1">
                                        <i class="bi bi-pencil"></i> Sửa
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@item.MaSanPham" method="post" onsubmit="return confirm('Bạn có chắc muốn xóa sản phẩm này?');" asp-antiforgery="true">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> Xóa
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                Không tìm thấy sản phẩm nào.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
