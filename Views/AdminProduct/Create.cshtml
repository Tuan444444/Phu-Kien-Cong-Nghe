@model PhuKienCongNghe.Models.Sanpham

@{
    ViewData["Title"] = "Thêm Sản phẩm mới";
    Layout = "_AdminLayout";
}

<div class="container-fluid px-0">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h2>
            <p class="text-muted mb-0">Điền thông tin để tạo sản phẩm mới</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Quay lại
        </a>
    </div>

    <form asp-action="Create" method="post">
        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Thông tin cơ bản</h6>
                    </div>
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" style="display:none;"></div>

                        <div class="mb-3">
                            <label asp-for="TenSanPham" class="form-label fw-bold">Tên sản phẩm <span class="text-danger">*</span></label>
                            <input asp-for="TenSanPham" class="form-control form-control-lg" placeholder="Nhập tên sản phẩm..." />
                            <span asp-validation-for="TenSanPham" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MoTa" class="form-label fw-bold">Mô tả chi tiết</label>
                            <textarea asp-for="MoTa" class="form-control" rows="6" placeholder="Mô tả tính năng, thông số kỹ thuật..."></textarea>
                            <span asp-validation-for="MoTa" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Gia" class="form-label fw-bold">Giá bán (VNĐ) <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <input asp-for="Gia" type="number" class="form-control" placeholder="0" />
                                    <span class="input-group-text">₫</span>
                                </div>
                                <span asp-validation-for="Gia" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="SoLuongTon" class="form-label fw-bold">Số lượng tồn kho</label>
                                <input asp-for="SoLuongTon" type="number" class="form-control" placeholder="0" />
                                <span asp-validation-for="SoLuongTon" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Phân loại</h6>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="MaDanhMuc" class="form-label fw-bold">Danh mục <span class="text-danger">*</span></label>
                            <select asp-for="MaDanhMuc" class="form-select" asp-items="ViewBag.MaDanhMuc">
                                <option value="">-- Chọn Danh mục --</option>
                            </select>
                            <span asp-validation-for="MaDanhMuc" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Hình ảnh sản phẩm</h6>
                    </div>
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <img id="imgPreview" src="/images/placeholder.png" class="img-fluid rounded border p-1"
                                 style="max-height: 200px; object-fit: contain;" alt="Ảnh xem trước" />
                        </div>

                        <div class="mb-3 text-start">
                            <label asp-for="HinhAnh" class="form-label fw-bold">Link ảnh (URL)</label>
                            <input asp-for="HinhAnh" class="form-control" id="imgInput" placeholder="https://..."
                                   onchange="document.getElementById('imgPreview').src = this.value || '/images/placeholder.png'" />
                            <span asp-validation-for="HinhAnh" class="text-danger small"></span>
                        </div>
                        <small class="text-muted d-block text-start">
                            <i class="bi bi-info-circle me-1"></i>
                            Dán link ảnh từ internet vào đây. Ảnh sẽ tự động hiển thị bên trên.
                        </small>
                    </div>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-check2-circle me-2"></i>Hoàn tất & Lưu
                    </button>
                    <a asp-action="Index" class="btn btn-light border">Hủy bỏ</a>
                </div>
            </div>
        </div>
    </form>
</div>