@model IEnumerable<PhuKienCongNghe.Models.Sanpham>
@{
    ViewData["Title"] = "Trang chủ";
}

<div class="text-center">
    <h1 class="display-4">Chào mừng đến với Cửa hàng Phụ kiện</h1>
    <p>Sản phẩm mới nhất</p>
</div>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <img src="@product.HinhAnh" class="card-img-top" alt="@product.TenSanPham" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">@product.TenSanPham</h5>
                    <p class="card-text text-danger fw-bold">@product.Gia.ToString("N0") VNĐ</p>
                    <a asp-controller="Product" asp-action="Details" asp-route-id="@product.MaSanPham" class="btn btn-primary">Xem chi tiết</a>
                </div>
            </div>
        </div>
    }
</div>