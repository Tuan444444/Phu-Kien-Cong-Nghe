<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Phụ Kiện Công Nghệ</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

    <style>
        :root {
            --shopee-orange: #ff6600;
            --shopee-orange-dark: #e65c00;
            --shopee-orange-light: #fff4eb;
        }

        /* Toast chỉnh theo tone cam */
        .toast-container .toast {
            border-radius: 10px;
            border: 1px solid var(--shopee-orange);
            overflow: hidden;
        }

        .toast-header.bg-success {
            background-color: var(--shopee-orange) !important;
        }

        .toast-header .btn-close-white {
            filter: brightness(0) invert(1);
        }

        /* Body margin fix nếu header sticky */
        body {
            padding-top: 0;
        }

        main {
            min-height: 65vh;
        }
    </style>

</head>
<body>

    <partial name="_HeaderLayout" />

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1100">
            <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-header bg-success text-white">
                    <i class="fa-solid fa-circle-check me-2"></i>
                    <strong class="me-auto">Thông báo</strong>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body">
                    @TempData["SuccessMessage"]
                </div>
            </div>
        </div>
    }

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <partial name="_FooterLayout" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Auto show toast when exists
        const toastEl = document.getElementById('liveToast');
        if (toastEl) {
            new bootstrap.Toast(toastEl).show();
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
