@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Phụ Kiện Công Nghệ</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    
</head>
<body>
    @{
        // Đọc số lượng từ Session ("CartCount" là key ta đặt ở Bước 1)
        var cartCount = HttpContextAccessor.HttpContext.Session.GetInt32("CartCount") ?? 0;
    }
    <header class="sticky-top">
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm py-3">
            <div class="container">

                <a class="navbar-brand fw-bold fs-4" asp-controller="Home" asp-action="Index">
                    Phu Kien Store
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">

                    <div class="header-search mx-auto">
                        <form asp-controller="Product" asp-action="Search" method="get" class="d-flex">
                            <input class="form-control me-0" type="search" name="query" placeholder="Tìm kiếm sản phẩm..." aria-label="Search">
                            <button class="btn btn-brand" type="submit"><i class="bi bi-search"></i></button>
                        </form>
                    </div>

                    <div class="header-actions d-flex align-items-center">
                        <a asp-controller="Cart" asp-action="Index" class="nav-link text-dark position-relative me-3">
                            <i class="bi bi-cart fs-4"></i>

                            <span class="badge bg-danger rounded-pill position-absolute cart-badge"
                                  id="cart-count-badge"
                                  style="@(cartCount > 0 ? "" : "display: none;")">
                                @cartCount
                            </span>
                        </a>

                        <div class="ms-2">
                            <a asp-controller="Account" asp-action="Login" class="btn btn-brand btn-sm">Đăng nhập</a>
                            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-secondary btn-sm">Đăng ký</a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>

        <nav class="category-nav navbar navbar-expand-lg py-0">
            <div class="container">
                <div class="collapse navbar-collapse" id="categoryNavbar">

                    @await Component.InvokeAsync("CategoryMenu")

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div class="container">
                <main role="main" class="pb-3">

                    @if (TempData["ToastMessage"] != null)
                    {
                        <div class="toast-container position-fixed top-0 end-0  p-3" style="z-index: 1100">
                            <div id="liveToast" class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
                                <div class="toast-header bg-success text-white">
                                    <strong class="me-auto">Thông báo</strong>
                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
                                </div>
                                <div class="toast-body">
                                    @TempData["ToastMessage"]
                                </div>
                            </div>
                        </div>
                    }
                  
            @RenderBody()

        </main>
    </div>

            <footer class="footer-clean">
                <div class="container">

                    <div class="row">
                        <div class="col-lg-12 text-center footer-social-icons">
                            <a href="#" class="social-icon-clean"><i class="bi bi-facebook"></i></a>
                            <a href="#" class="social-icon-clean"><i class="bi bi-instagram"></i></a>
                            <a href="#" class="social-icon-clean"><i class="bi bi-youtube"></i></a>
                            <a href="#" class="social-icon-clean"><i class="bi bi-tiktok"></i></a>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            <ul class="footer-nav-links">
                                <li><a href="#">Trang chủ</a></li>
                                <li><a href="#">Giới thiệu</a></li>
                                <li><a href="#">Chính sách bảo mật</a></li>
                                <li><a href="#">Điều khoản dịch vụ</a></li>
                                <li><a href="#">Liên hệ</a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12 text-center">
                            <p class="footer-copyright">
                                &copy; @DateTime.Now.Year - Bản quyền thuộc về PhuKienCongNghe
                            </p>
                        </div>
                    </div>

                </div>
            </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> <script src="~/js/site.js" asp-append-version="true"></script>
            <script>
                // Khởi tạo và tự động ẩn Toast
                var toastEl = document.getElementById('liveToast');
                if (toastEl) {
                    // Kiểm tra xem 'bootstrap' đã được tải chưa
                    if (typeof bootstrap !== 'undefined' && bootstrap.Toast) {
                        var toast = new bootstrap.Toast(toastEl, {
                            delay: 3000 // Tự ẩn sau 5 giây
                        });
                        toast.show();
                    }
                }
            </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>