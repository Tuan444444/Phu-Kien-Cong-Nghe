<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trang Quản Trị</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body {
            display: flex;
            min-height: 100vh;
            background-color: #f8f9fa;
        }

        /* --- Sidebar (Giữ nguyên) --- */
        .admin-sidebar {
            width: 260px;
            background-color: #343a40;
            color: white;
            position: fixed;
            height: 100%;
            padding-top: 0px;
            box-shadow: 2px 0 5px rgba(0,0,0,0.1);
        }

        /* --- Nội dung chính (Giữ nguyên) --- */
        .admin-content {
            margin-left: 260px;
            padding: 30px;
            width: 100%;
        }

        /* --- Link trong Sidebar (Giữ nguyên) --- */
        .admin-sidebar .nav-link {
            color: #adb5bd;
            padding: 12px 20px;
            font-size: 1rem;
        }

            .admin-sidebar .nav-link:hover {
                color: #fff;
                background-color: #495057;
            }

            .admin-sidebar .nav-link.active {
                color: #fff;
                background-color: #0d6efd;
            }

        .admin-sidebar .nav-header {
            padding: 0.5rem 1.25rem;
            font-size: 0.85rem;
            color: #6c757d;
            text-transform: uppercase;
        }

        /* --- (SỬA 1) CSS CHO NÚT USER (Vẫn hài hòa) --- */
        .sidebar-user-section {
            padding: 20px 0;
            border-bottom: 1px solid #495057;
            margin-bottom: 15px;
        }
        
        .btn-user-admin {
            /* Nền trong suốt pha 10% màu trắng -> Tạo màu xám khói rất sang trên nền tối */
            background-color: rgba(255, 255, 255, 0.05);
            /* Viền mỏng tinh tế, trùng tông màu nhưng sáng hơn xíu */
            border: 1px solid rgba(255, 255, 255, 0.15);
            color: #e0e0e0 !important; /* Màu chữ trắng xám nhẹ, đỡ chói mắt */
            /* Bo góc vừa phải */
            border-radius: 6px;
            padding: 8px 16px;
            font-weight: 500;
            font-size: 0.95rem;
            text-decoration: none;
            display: inline-flex; /* Căn giữa icon và chữ */
            align-items: center;
            gap: 8px; /* Khoảng cách giữa icon và tên */
            transition: all 0.2s ease-in-out;
        }

            /* Hiệu ứng khi di chuột vào */
            .btn-user-admin:hover,
            .btn-user-admin:focus,
            .dropdown-toggle.show { /* Giữ trạng thái sáng khi menu đang mở */
                background-color: rgba(255, 255, 255, 0.15); /* Sáng hơn một chút */
                border-color: rgba(255, 255, 255, 0.3); /* Viền sáng hơn */
                color: #ffffff !important; /* Chữ trắng tinh */
                box-shadow: 0 0 10px rgba(255, 255, 255, 0.05); /* Phát sáng nhẹ */
            }

            /* Chỉnh lại icon bên trong nút cho cân đối */
            .btn-user-admin i {
                font-size: 1.1rem;
                opacity: 0.8; /* Icon mờ hơn chữ 1 chút cho nghệ thuật */
            }

        /* --- (SỬA 2) CSS CHO CÁC MỤC BÊN TRONG DROPDOWN --- */
        .sidebar-user-section .dropdown-menu {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            border: none;
            border-radius: .5rem;
            padding: 0.5rem; /* Thêm padding cho đẹp */
        }

        .admin-sidebar .dropdown-item {
            padding: 0.5rem 1rem;
            font-weight: 500;
            color: #495057;
            border-radius: 0.25rem;
        }

            .admin-sidebar .dropdown-item:active {
                background-color: #0d6efd; /* Màu xanh khi click */
                color: #fff;
            }

        /* Style cho "Hồ sơ" (Dùng màu XANH của admin, thay vì màu cam) */
        .admin-sidebar .dropdown-item-highlight {
            background-color: #eef4ff; /* Nền xanh nhạt */
            color: #0d6efd; /* Chữ xanh đậm */
            font-weight: 600;
        }

            .admin-sidebar .dropdown-item-highlight:hover,
            .admin-sidebar .dropdown-item-highlight:focus {
                background-color: #dbe8ff; /* Nền đậm hơn khi hover */
                color: #0a58ca;
            }

        /* Style cho "Đăng xuất" (Nền đỏ nhạt, chữ đỏ đậm) */
        .admin-sidebar .dropdown-item-danger {
            background-color: #fbebee; /* Nền đỏ nhạt */
            color: #dc3545; /* Chữ đỏ */
            font-weight: 600;
        }

            .admin-sidebar .dropdown-item-danger:hover,
            .admin-sidebar .dropdown-item-danger:focus {
                background-color: #f8d7da; /* Nền đậm hơn khi hover */
                color: #b02a37; /* Chữ đậm hơn khi hover */
            }
        }
    </style>
    @RenderSection("Styles", required: false)

</head>
<body>

    <nav class="admin-sidebar">
        <div class="sidebar-user-section text-center">
            <div class="dropdown">
                <a class="dropdown-toggle btn-user-admin" href="#" id="userDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-person-fill me-1"></i>
                    @User.Identity.Name
                </a>
                <ul class="dropdown-menu" aria-labelledby="userDropdownMenuLink">
                  
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <form asp-controller="Account" asp-action="Logout" method="post" asp-antiforgery="true">
                            <button type="submit" class="dropdown-item dropdown-item-danger">
                                <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>

        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" asp-controller="Admin" asp-action="Index">
                    <i class="bi bi-speedometer2 me-2"></i> Dashboard
                </a>
            </li>

            <li class="nav-header">Quản Lý</li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="AdminProduct" asp-action="Index">
                    <i class="bi bi-box-seam me-2"></i> Sản phẩm
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="AdminOrders" asp-action="Index">
                    <i class="bi bi-receipt me-2"></i> Đơn hàng
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="AdminCategories" asp-action="Index">
                    <i class="bi bi-tags me-2"></i> Danh mục
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="AdminUsers" asp-action="Index">
                    <i class="bi bi-people me-2"></i> Người dùng
                </a>
            </li>

            <hr class="text-white-50 mx-3">

            <li class="nav-item">
                <a class="nav-link" asp-controller="Product" asp-action="Index" target="_blank">
                    <i class="bi bi-globe me-2"></i> Xem Trang chủ
                </a>
            </li>
        </ul>
    </nav>

    <main class="admin-content">

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @RenderBody()

    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script type="text/javascript">
        $(function () {
            var currentPath = window.location.pathname; // Lấy URL hiện tại
            var bestMatch = null;
            var bestMatchLength = 0;

            // 1. Lặp qua tất cả các link trong sidebar
            $('.admin-sidebar .nav-link').each(function () {
                var $this = $(this);
                var linkHref = $this.attr('href');

                if (linkHref) {
                    // 2. So sánh: Tìm link nào "khớp" với URL nhất
                    if (currentPath.toLowerCase().startsWith(linkHref.toLowerCase())) {
                        if (linkHref.length > bestMatchLength) {
                            bestMatchLength = linkHref.length;
                            bestMatch = $this;
                        }
                    }
                }
            });

            // 3. Xóa "active" cũ và thêm "active" (màu xanh) cho link tốt nhất
            $('.admin-sidebar .nav-link').removeClass('active');
            if (bestMatch) {
                bestMatch.addClass('active');
            } else if (currentPath === "/Admin" || currentPath.startsWith("/Admin/Index") || currentPath === "/Admin/") {
                // Trường hợp đặc biệt cho Dashboard
                $('.admin-sidebar .nav-link[asp-controller="Admin"][asp-action="Index"]').addClass('active');
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>