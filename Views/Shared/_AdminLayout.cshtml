<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trang Quản Trị</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body {
            display: flex;
            min-height: 100vh;
            background-color: #ffffff; /* f8f9faNền xám nhạt */
        }

        /* --- Sidebar (Menu bên trái) --- */
        .admin-sidebar {
            width: 260px; /* Độ rộng của Sidebar */
            background-color: #343a40; /* Màu nền tối */
            color: white;
            position: fixed; /* Cố định khi cuộn */
            height: 100%;
            padding-top: 0px;
            box-shadow: 2px 0 5px rgba(0,0,0,0.1);
        }

        /* --- Nội dung chính (Bên phải) --- */
        .admin-content {
            margin-left: 260px; /* Phải bằng độ rộng sidebar */
            padding: 30px;
            width: 100%; /* Chiếm hết phần còn lại */
        }

        /* --- Tùy chỉnh link trong Sidebar --- */
        .admin-sidebar .nav-link {
            color: #adb5bd; /* Màu chữ link */
            padding: 12px 20px;
            font-size: 1rem;
        }

            .admin-sidebar .nav-link:hover {
                color: #fff;
                background-color: #495057; /* Màu khi hover */
            }

            .admin-sidebar .nav-link.active {
                color: #fff;
                background-color: #0d6efd; /* Màu brand (thay bằng màu brand của bạn) */
            }

        .admin-sidebar .nav-header {
            padding: 0.5rem 1.25rem;
            font-size: 0.85rem;
            color: #6c757d; /* Màu tiêu đề (QUẢN LÝ) */
            text-transform: uppercase;
        }
        /* --- THÊM CSS MỚI CHO NÚT USER MÀU CAM --- */
        .sidebar-user-section {
            padding: 20px 0;
            border-bottom: 1px solid #495057; /* Thêm đường kẻ phân cách */
            margin-bottom: 15px;
        }

        .btn-user-admin {
            background-color: #f28123; /* Màu cam (giống trang user) */
            color: white !important;
            border-radius: 25px;
            padding: 10px 20px;
            font-weight: 600;
            text-decoration: none;
            display: inline-block;
        }

            .btn-user-admin:hover, .btn-user-admin:focus {
                background-color: #e06f14;
                color: white !important;
            }

        .sidebar-user-section .dropdown-menu {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            border: none;
            border-radius: .5rem;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>

    <nav class="admin-sidebar">
        <div class="sidebar-user-section text-center">
            <div class="dropdown">
                <a class="dropdown-toggle btn-user-admin" href="#" id="userDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-person-fill me-1"></i>
                    @User.Identity.Name
                </a>
                <ul class="dropdown-menu" aria-labelledby="userDropdownMenuLink">
                    <li><a class="dropdown-item" href="#">Hồ sơ</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <form asp-controller="Account" asp-action="Logout" method="post" asp-antiforgery="true">
                            <button type="submit" class="dropdown-item">
                                <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
        <ul class="nav flex-column">

            <li class="nav-item">
                <a class="nav-link active" asp-controller="Admin" asp-action="Index">
                    <i class="bi bi-speedometer2 me-2"></i> Dashboard
                </a>
            </li>

            <li class="nav-header">Quản Lý</li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="AdminProduct" asp-action="Index">
                    <i class="bi bi-box-seam me-2"></i> Sản phẩm
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="AdminOrders" asp-action="Index">
                    <i class="bi bi-receipt me-2"></i> Đơn hàng
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="AdminCategories" asp-action="Index">
                    <i class="bi bi-tags me-2"></i> Danh mục
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="AdminUsers" asp-action="Index">
                    <i class="bi bi-people me-2"></i> Người dùng
                </a>
            </li>

            <hr class="text-white-50 mx-3">

            <li class="nav-item">
                <a class="nav-link" asp-controller="Product" asp-action="Index" target="_blank">
                    <i class="bi bi-globe me-2"></i> Xem Trang chủ
                </a>
            </li>
        </ul>
    </nav>

    <main class="admin-content">

        @RenderBody()

    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>