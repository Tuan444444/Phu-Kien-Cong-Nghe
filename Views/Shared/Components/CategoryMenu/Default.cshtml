@model IEnumerable<PhuKienCongNghe.Models.Danhmuc>

<div class="shopee-category-bar">
    <div class="container">
        <div class="d-flex align-items-center">

            <div class="flex-shrink-0 me-3">
                <a asp-controller="Product" asp-action="Index"
                   class="btn-all-products @(ViewContext.RouteData.Values["id"] == null ? "active" : "")">
                    <i class="bi bi-grid-fill me-2"></i> Tất Cả Sản Phẩm
                </a>
            </div>

            <div class="category-horizontal-list">
                @foreach (var item in Model)
                {
                    var isActive = (ViewContext.RouteData.Values["id"]?.ToString() == item.MaDanhMuc.ToString()) ? "active" : "";

                    <a asp-controller="Product" asp-action="Category" asp-route-id="@item.MaDanhMuc"
                       class="cat-item @isActive">
                        @item.TenDanhMuc
                    </a>
                }
            </div>

        </div>
    </div>
</div>