@using Microsoft.AspNetCore.Http
@using System.Security.Claims
@inject IHttpContextAccessor HttpContextAccessor

@{
    var cartCount = HttpContextAccessor.HttpContext?.Session.GetInt32("CartCount") ?? 0;
}

<style>
    /* ========= TONE CAM CHỦ ĐẠO ========= */
    :root {
        --main-orange: #ff6600;
        --orange-light: #ff7f2a;
        --orange-hover: #e65c00;
    }

    /* Navbar */
    .navbar {
        background: white !important;
        border-bottom: 1px solid var(--main-orange);
        margin-bottom: 6rem;
    }

    /* Brand */
    .navbar-brand {
        color: var(--main-orange) !important;
    }

    /* Search button */
    .btn-outline-primary {
        border-color: var(--main-orange) !important;
        color: var(--main-orange) !important;
    }

    .btn-outline-primary:hover {
        background: var(--main-orange) !important;
        color: white !important;
    }

    /* Giỏ hàng */
    .btn-light:hover {
        background: #e1dbd7 !important !important;
    }

    /* Nút login */
    .btn-login {
        background: var(--main-orange) !important;
        color: white !important;
        border-radius: 5px;
        font-weight: 600;
    }

    .btn-login:hover {
        background: var(--orange-hover) !important;
        color: white !important;
    }

    /* Đăng ký Outline */
    .btn-outline-primary {
        border-radius: 5px;
        border-color: var(--main-orange) !important;
        color: var(--main-orange) !important;
    }

    .btn-outline-primary:hover {
        background: var(--main-orange) !important;
        color: white !important;
    }
    .btn {
        --bs-border-radius: 3rem !important;
    }
    /* Dropdown */
    .dropdown-menu {
        border: 1px solid var(--main-orange);
    }

    .dropdown-item:hover {
        background: var(--orange-light);
        color: white;
    }

    .dropdown-item-admin {
        font-weight: 600;
        color: var(--main-orange);
    }

    .dropdown-item-admin:hover {
        background: var(--orange-hover);
        color: white;
    }
    
</style>

<header class="sticky-top">
    <nav class="navbar navbar-expand-lg navbar-light shadow-sm py-3">
        <div class="container">

            <a class="navbar-brand fw-bold fs-4" asp-controller="Product" asp-action="Index">
                <i class="bi bi-headset"></i>
                Phụ Kiện
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarMain">

                <!-- Ô tìm kiếm -->
                <div class="mx-auto my-2 my-lg-0">
                    <form asp-controller="Product" asp-action="Search" method="get" class="d-flex" style="width: 400px;">
                        <input name="query" class="form-control me-2" type="search" placeholder="Tìm kiếm sản phẩm...">
                        <button class="btn btn-outline-primary" type="submit">Tìm</button>
                    </form>
                </div>
                <div class="category-menu-bar py-2 bg-light shadow-sm">
                    <div class="container">
                        <div class="dropdown">
                            <button class="btn btn-brand dropdown-toggle fw-bold"
                                    type="button"
                                    data-bs-toggle="dropdown"
                                    aria-expanded="false"
                                    style="border-radius: 5px;">
                                <i class="fa-solid fa-bars me-2"></i>
                                Danh Mục 
                            </button>

                            @await Component.InvokeAsync("CategoryMenu")

                        </div>
                    </div>
                </div>

                <div class="d-flex align-items-center ms-lg-3">

                    <!-- Giỏ hàng -->
                    <a asp-controller="Cart" asp-action="Index" class="btn btn-light position-relative me-3">
                        <i class="bi bi-cart3 fs-5"></i>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            @cartCount
                        </span>
                    </a>

                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <!-- ĐÃ ĐĂNG NHẬP -->
                        <div class="dropdown">
                            <button class="btn btn-login dropdown-toggle" data-bs-toggle="dropdown">
                                <i class="fa-solid fa-user"></i> @User.Identity.Name
                            </button>

                            <ul class="dropdown-menu dropdown-menu-end">

                                @if (User.IsInRole("admin"))
                                {
                                    <li>
                                        <a class="dropdown-item dropdown-item-admin"
                                           asp-controller="Admin" asp-action="Index">
                                            <i class="bi bi-speedometer2 me-2"></i> Trang Quản Trị
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                }

                                <li><a class="dropdown-item" asp-controller="User" asp-action="Profile">Thông tin cá nhân</a></li>
                                <li><a class="dropdown-item" asp-controller="User" asp-action="ChangePassword">Đổi mật khẩu</a></li>
                                <li><a class="dropdown-item" asp-controller="User" asp-action="OrderHistory">Lịch sử mua hàng</a></li>
                                <li><hr class="dropdown-divider"></li>

                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post">
                                        <button type="submit" class="dropdown-item text-danger fw-semibold">
                                            <i class="fa-solid fa-right-from-bracket"></i> Đăng xuất
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <!-- CHƯA ĐĂNG NHẬP -->
                        <div class="d-flex">
                            <a asp-controller="Account" asp-action="Login" class="btn btn-login me-2">
                                <i class="fa-solid fa-right-to-bracket"></i> Đăng nhập
                            </a>

                            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary">
                                <i class="fa-solid fa-user-plus"></i> Đăng ký
                            </a>
                        </div>
                    }
                </div>

            </div>
        </div>
    </nav>

   

    
</header>

