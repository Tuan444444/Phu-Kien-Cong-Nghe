@using Microsoft.AspNetCore.Http
@using System.Security.Claims
@inject IHttpContextAccessor HttpContextAccessor

@{
    var cartCount = HttpContextAccessor.HttpContext?.Session.GetInt32("CartCount") ?? 0;
}

<style>
    :root {
        --shopee-orange: #ff6600;
        --shopee-orange-dark: #e65c00;
        --shopee-orange-light: #fff4eb;
    }

    /* Navbar */
    .navbar {
        border-bottom: 3px solid var(--shopee-orange);
        transition: 0.25s;
    }

    .navbar-brand {
        color: var(--shopee-orange) !important;
        font-weight: 700;
        letter-spacing: 0.5px;
        transition: 0.25s;
    }

        .navbar-brand:hover {
            color: var(--shopee-orange-dark) !important;
            transform: scale(1.04);
        }

    /* Search box */
    .search-box input {
        border-radius: 8px;
        border: 1px solid #ffd5bb;
    }

        .search-box input:focus {
            border-color: var(--shopee-orange);
            box-shadow: 0 0 0 0.15rem rgba(255, 102, 0, 0.2);
        }

    .btn-search {
        background-color: var(--shopee-orange);
        border-color: var(--shopee-orange);
        color: white !important;
        font-weight: 600;
        border-radius: 8px;
        padding: 6px 18px;
    }

        .btn-search:hover {
            background-color: var(--shopee-orange-dark);
            border-color: var(--shopee-orange-dark);
            color: #fff;
        }

    /* Login Button */
    .btn-login {
        background-color: var(--shopee-orange);
        color: #fff !important;
        border-radius: 8px;
        font-weight: 600;
        padding: 6px 16px;
    }

        .btn-login:hover {
            background-color: var(--shopee-orange-dark);
        }

    /* Register Button */
    .btn-outline-primary {
        border-color: var(--shopee-orange);
        color: var(--shopee-orange) !important;
        font-weight: 600;
        border-radius: 8px;
        padding: 6px 16px;
    }

        .btn-outline-primary:hover {
            background-color: var(--shopee-orange);
            color: #fff !important;
        }

    /* Giỏ hàng */
    .btn-cart {
        border: 1px solid #ffe6d5;
        border-radius: 8px;
        padding: 6px 14px;
        transition: 0.25s;
        position: relative;
    }

        .btn-cart:hover {
            border-color: var(--shopee-orange);
            background-color: var(--shopee-orange-light);
        }

    .badge-cart {
        background-color: var(--shopee-orange) !important;
        font-size: 0.75rem;
        padding: 4px 6px;
    }

    /* Dropdown */
    .custom-dropdown .dropdown-item {
        font-weight: 500;
        transition: 0.2s;
    }

        .custom-dropdown .dropdown-item:hover {
            background-color: var(--shopee-orange-light);
            color: var(--shopee-orange) !important;
            font-weight: 600;
        }

    .dropdown-menu {
        border-radius: 8px;
        transition: 0.25s;
    }
    /* CATEGORY BAR */
    .category-bar {
        position: relative;
        z-index: 997;
    }

    .category-menu {
        list-style: none;
        display: flex;
        gap: 18px;
        padding: 0;
        margin: 0;
    }

        .category-menu li {
            display: inline-block;
        }

            .category-menu li a {
                display: block;
                padding: 8px 14px;
                border-radius: 6px;
                background: #ffffff;
                color: #555;
                font-weight: 500;
                text-decoration: none;
                border: 1px solid #f0f0f0;
                transition: 0.25s;
            }

                /* Hover đẹp */
                .category-menu li a:hover {
                    background-color: var(--shopee-orange-light);
                    color: var(--shopee-orange);
                    border-color: var(--shopee-orange);
                    transform: translateY(-2px);
                }

</style>


<header class="sticky-top">
    <nav class="navbar navbar-expand-lg bg-white shadow-sm py-3">
        <div class="container">

            <a class="navbar-brand fs-4" asp-controller="Home" asp-action="Index">
                <i class="bi bi-headset"></i> Phụ Kiện
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarMain">

              

                <!-- SEARCH -->
                <div class="mx-auto my-2 search-box">
                    <form asp-controller="Product" asp-action="Search" method="get" class="d-flex" style="width: 400px;">
                        <input name="query" class="form-control me-2" placeholder="Tìm kiếm sản phẩm..." />
                        <button class="btn btn-search">Tìm</button>
                    </form>
                </div>

                <!-- RIGHT -->
                <div class="d-flex align-items-center ms-lg-3">

                    <!-- GIỎ HÀNG -->
                    <a asp-controller="Cart" asp-action="Index" class="btn btn-light btn-cart me-3">
                        <i class="bi bi-cart3 fs-5"></i>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill badge-cart">
                            @cartCount
                        </span>
                    </a>

                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <!-- LOGGED IN -->
                        <div class="dropdown">
                            <button class="btn btn-login dropdown-toggle" data-bs-toggle="dropdown">
                                <i class="fa-solid fa-user"></i> @User.Identity.Name
                            </button>

                            <ul class="dropdown-menu dropdown-menu-end custom-dropdown">
                                <li><a class="dropdown-item" asp-controller="User" asp-action="Profile">Thông tin cá nhân</a></li>
                                <li><a class="dropdown-item" asp-controller="User" asp-action="ChangePassword">Đổi mật khẩu</a></li>
                                <li><a class="dropdown-item" asp-controller="User" asp-action="OrderHistory">Lịch sử mua hàng</a></li>

                                <li><hr class="dropdown-divider" /></li>

                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post">
                                        <button type="submit" class="dropdown-item text-danger fw-bold">
                                            <i class="fa-solid fa-right-from-bracket"></i> Đăng xuất
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <!-- NOT LOGGED IN -->
                        <div class="d-flex">
                            <a asp-controller="Account" asp-action="Login" class="btn btn-login me-2">
                                <i class="fa-solid fa-right-to-bracket"></i> Đăng nhập
                            </a>

                            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary">
                                <i class="fa-solid fa-user-plus"></i> Đăng ký
                            </a>
                        </div>
                    }
                </div>

            </div>
        </div>
    </nav>
</header>
<!-- CATEGORY BAR -->
<div class="category-bar bg-white shadow-sm border-bottom">
    <div class="container py-2">
        <ul class="category-menu">
            @await Component.InvokeAsync("CategoryMenu")
        </ul>
    </div>
</div>